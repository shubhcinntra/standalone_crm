<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/baseView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="@dimen/size_15"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_60">
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tvMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:text="Rupal Dhruv"
                    android:textSize="@dimen/text_size_24"
                    android:layout_gravity="center"
                    android:fontFamily="@font/muli_regular"
                    android:textColor="@color/light_black"/>


            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical|right"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/tvToday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/today"
                    android:clickable="true"
                    android:paddingRight="@dimen/size_15"
                    android:paddingLeft="@dimen/size_15"
                    android:paddingTop="@dimen/size_5"
                    android:paddingBottom="@dimen/size_5"
                    android:textSize="@dimen/text_size_16"
                    android:fontFamily="@font/muli_regular"
                    android:background="@drawable/rounded_border_blue"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

        </LinearLayout>


    </FrameLayout>
    <FrameLayout
        android:visibility="gone"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/days"
                android:visibility="gone"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_40">

            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
     <LinearLayout
      android:visibility="gone"
     android:orientation="horizontal"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
     <LinearLayout
      android:layout_weight="1"
      android:gravity="center"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
     <TextView
      android:id="@+id/sunDay"
         android:fontFamily="@font/muli_regular"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="6dp"
      android:textColor="@color/white"

      android:text="Sun"/>
    </LinearLayout>
      <LinearLayout
        android:layout_weight="1"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <TextView
        android:id="@+id/monDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:textColor="@color/white"
          android:fontFamily="@font/muli_regular"
                    android:text="Mon"/>
            </LinearLayout>
      <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tuesDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:textColor="@color/white"
                    android:text="Tus"
                    android:fontFamily="@font/muli_regular"/>
            </LinearLayout>
      <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/wedDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/muli_regular"
                    android:text="Wed"/>
            </LinearLayout>
      <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/thusnDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/muli_regular"
                    android:text="Thu"/>
            </LinearLayout>
      <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/friDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/muli_regular"
                    android:text="Fri"/>
            </LinearLayout>
      <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/satDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/muli_regular"
                    android:text="Sat"/>
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.cinntra.standalone.calender.HorizontalPickerRecyclerView
            android:id="@+id/rvDays"
            app:spanCount="7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/size_5">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_weight="3"
                android:layout_height="match_parent"/>
            <FrameLayout
                android:id="@+id/vHover"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/background_day_hover"
                android:layout_height="match_parent"
                android:visibility="invisible" />
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_weight="3"
                android:layout_height="match_parent"/>
        </LinearLayout>

    </FrameLayout>

</LinearLayout>