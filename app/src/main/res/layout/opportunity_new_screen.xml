<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/size_5"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="true"
        app:cardBackgroundColor="@color/white"
        android:layout_marginLeft="@dimen/size_5"
        android:layout_marginRight="@dimen/size_5"
        app:cardElevation="@dimen/size_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/size_8"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ABC Pvt. ltd."
                    android:textSize="@dimen/text_size_16"
                    android:layout_centerInParent="true"
                    android:maxLines="1"
                    android:paddingRight="@dimen/size_90"
                    android:ellipsize="end"
                    android:textColor="@color/black"
                    android:fontFamily="@font/muli_bold"/>

                <TextView
                    android:id="@+id/mode1"
                    android:background="@drawable/background_yellow_rounded"
                    android:backgroundTint="@color/green"
                    android:layout_width="90dp"
                    android:layout_height="@dimen/size_30"
                    android:text="Proposal"
                    android:gravity="center"
                    android:clickable="true"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/text_size_12"
                    android:inputType="text"
                    android:ellipsize="end"
                    android:textColor="@color/white"
                    android:fontFamily="@font/muli_regular"
                    android:focusable="false" />




            </RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/muli_regular"
        android:text="Pankaj"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_12" />


</RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/price_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_2"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/ship_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lead_source"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/black"
                    android:fontFamily="@font/muli_regular"/>

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rs_5000"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/black"
                    android:fontFamily="@font/muli_regular"/>

            </LinearLayout>

                <com.like.LikeButton
                    android:visibility="gone"
                    android:id="@+id/star_button"
                    android:layout_width="@dimen/size_25"
                    android:layout_height="@dimen/size_25"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/size_7"
                    app:icon_size="25dp"
                    app:icon_type="Star" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/item_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/black"
                    android:fontFamily="@font/muli_regular"/>


                <ImageView
                    android:visibility="gone"
                    android:id="@+id/star"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="@dimen/size_7"
                    android:background="@drawable/ic_star_3"
                    android:layout_alignParentRight="true"/>


                <ImageView
                    android:id="@+id/chat"
                    android:layout_width="@dimen/size_30"
                    android:layout_height="@dimen/size_30"

                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/size_5"
                    android:layout_marginRight="@dimen/size_7"
                    android:background="@drawable/blue_chatter" />
                <TextView
                    android:id="@+id/follow_up"
                    android:layout_below="@id/item_date"
                    android:background="@drawable/background_yellow_rounded"
                    android:backgroundTint="@color/colorPrimary"
                    android:layout_width="90dp"
                    android:layout_height="@dimen/size_30"
                    android:text="Follow Up"
                    android:layout_marginTop="@dimen/size_5"
                    android:gravity="center"
                    android:clickable="true"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/white"
                    android:fontFamily="@font/muli_regular"
                    android:focusable="false" />

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>