<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:id="@+id/mainContainer"
    android:layout_width="match_parent"
    android:layout_height="@dimen/text_56"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal">
    <RelativeLayout
     android:layout_margin="@dimen/text_size_10"
     android:gravity="center_vertical"
     android:layout_width="match_parent"
     android:layout_height="match_parent">
        <RelativeLayout
            android:gravity="center"
            android:id="@+id/back_press"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

     <ImageView
      android:id="@+id/back"
      android:layout_width="@dimen/text_size_32"
      android:layout_height="wrap_content"
      android:src="@drawable/ic_baseline_arrow_back_black_24"/>

        </RelativeLayout>

        <TextView
            android:gravity="center_vertical"
            android:id="@+id/head_title"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_18"
            android:fontFamily="@font/muli_regular"
            android:text="@string/notification"/>
    </RelativeLayout>
</LinearLayout>
