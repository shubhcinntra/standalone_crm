<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.BlankFragment"
    android:background="@color/white"
    android:id="@+id/tempfinal">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">





        <ScrollView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/size_15"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/address"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16"
                    android:fontFamily="@font/muli_bold"
                    android:id="@+id/address"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginRight="@dimen/size_7"
                            android:layout_weight="0.5">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/billing_name"
                                android:id="@+id/billing_name"
                                android:layout_marginTop="@dimen/size_10"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_14"
                                android:fontFamily="@font/muli_regular"/>

                            <EditText
                                android:id="@+id/billing_name_value"
                                android:fontFamily="@font/muli_regular"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/text_45"
                                android:gravity="center_vertical"
                                android:hint="@string/billing_name"
                                android:imeOptions="actionNext"
                                android:maxLines="1"
                                android:inputType="textPostalAddress"
                                android:textColorHint="@color/light_grey_box"
                                android:textSize="@dimen/text_size_14"
                                android:paddingLeft="@dimen/size_10"
                                android:layout_marginTop="@dimen/size_10"
                                android:background="@drawable/rounded_border"/>



                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="@dimen/size_7"
                            android:layout_weight="0.5">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/zip_code"
                                android:id="@+id/zip_code"
                                android:layout_marginTop="@dimen/size_10"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_14"
                                android:fontFamily="@font/muli_regular"/>

                            <EditText
                                android:fontFamily="@font/muli_regular"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/text_45"
                                android:gravity="center_vertical"
                                android:hint="@string/zip_code"
                                android:imeOptions="actionNext"
                                android:maxLines="1"
                                android:inputType="number"
                                android:maxLength="10"
                                android:id="@+id/zip_code_value"
                                android:textColorHint="@color/light_grey_box"
                                android:textSize="@dimen/text_size_14"
                                android:paddingLeft="@dimen/size_10"
                                android:layout_marginTop="@dimen/size_10"
                                android:background="@drawable/rounded_border"/>

                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginRight="@dimen/size_7"
                            android:layout_weight="0.5">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/state"
                                android:id="@+id/state"
                                android:layout_marginTop="@dimen/size_10"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_14"
                                android:fontFamily="@font/muli_regular"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/text_45"
                                android:layout_marginTop="@dimen/size_10"
                                android:paddingRight="@dimen/size_10"
                                android:gravity="center_horizontal|center_vertical"
                                android:background="@drawable/rounded_border"
                                >
                                <TextView
                                    android:id="@+id/state_value"
                                    android:fontFamily="@font/muli_regular"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/text_45"
                                    android:gravity="center_vertical"
                                    android:hint="@string/state"
                                    android:textColor="@color/black"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:inputType="textPostalAddress"
                                    android:textColorHint="@color/light_grey_box"
                                    android:textSize="@dimen/text_size_14"
                                    android:paddingLeft="@dimen/size_10"
                                    />


                            </RelativeLayout>


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="@dimen/size_7"
                            android:layout_weight="0.5">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/country"
                                android:id="@+id/country"
                                android:layout_marginTop="@dimen/size_10"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_14"
                                android:fontFamily="@font/muli_regular"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/text_45"
                                android:layout_marginTop="@dimen/size_10"
                                android:paddingRight="@dimen/size_10"
                                android:gravity="center_horizontal|center_vertical"
                                android:background="@drawable/rounded_border"
                                >

                                <TextView
                                    android:id="@+id/country_value"
                                    android:fontFamily="@font/muli_regular"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/text_45"
                                    android:gravity="center_vertical"
                                    android:hint="@string/country"
                                    android:textColor="@color/black"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:inputType="textPostalAddress"
                                    android:textColorHint="@color/light_grey_box"
                                    android:textSize="@dimen/text_size_14"
                                    android:paddingLeft="@dimen/size_10"
                                   />

                            </RelativeLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/shipping_type"
                        android:layout_marginTop="@dimen/size_10"
                        android:id="@+id/total_before_discont"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14"
                        android:fontFamily="@font/muli_regular"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_45"
                        android:layout_marginTop="@dimen/size_10"
                        android:paddingRight="@dimen/size_10"
                        android:gravity="center_horizontal|center_vertical"
                        android:background="@drawable/rounded_border"
                        >


                        <Spinner
                            android:id="@+id/shipping_spinner"
                            android:layout_toLeftOf="@id/img11"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/text_45"
                            android:gravity="center_vertical|start"
                            android:dropDownWidth="wrap_content"
                            android:forceHasOverlappingRendering="false"
                            android:spinnerMode="dropdown"
                            android:entries="@array/shippingType"
                            android:textSize="@dimen/text_size_14"
                            android:paddingLeft="@dimen/size_5"
                            android:background="@null"
                            android:dropDownVerticalOffset="@dimen/text_45"
                            />
                        <ImageView
                            android:id="@+id/img11"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_bottom_arrow_black"
                            />
                    </RelativeLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/billing_address"
                        android:id="@+id/billing_address"
                        android:layout_marginTop="@dimen/size_15"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14"
                        android:fontFamily="@font/muli_regular"/>

                    <EditText
                        android:fontFamily="@font/muli_regular"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_70"
                        android:gravity="start"
                        android:hint="@string/address"
                        android:imeOptions="actionDone"
                        android:maxLines="2"
                        android:inputType="textPostalAddress|textMultiLine"
                        android:id="@+id/billing_address_value"
                        android:textColorHint="@color/light_grey_box"
                        android:textSize="@dimen/text_size_14"
                        android:paddingTop="@dimen/size_5"
                        android:paddingLeft="@dimen/size_10"
                        android:layout_marginTop="@dimen/size_10"
                        android:background="@drawable/rounded_border"/>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/checkboxManager"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_45"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/size_15"
                    android:orientation="horizontal">

                    <CheckBox
                        android:buttonTint="@color/colorPrimary"
                        android:id="@+id/checkbox1"
                        android:layout_centerVertical="true"
                        android:layout_width="@dimen/size_30"
                        android:layout_height="@dimen/size_30" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/size_5"
                        android:layout_toRightOf="@id/checkbox1"
                        android:fontFamily="@font/muli_regular"
                        android:text="@string/ship_to_different"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14" />
                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/ship_block"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:id="@+id/shipping_block"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_marginRight="@dimen/size_7"
                            android:layout_height="wrap_content">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/shipping_name"
                                android:id="@+id/shipping_name"
                                android:layout_marginTop="@dimen/size_10"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_14"
                                android:fontFamily="@font/muli_regular"/>

                            <EditText
                                android:fontFamily="@font/muli_regular"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/text_45"
                                android:gravity="center_vertical"
                                android:hint="@string/shipping_name"
                                android:imeOptions="actionNext"
                                android:maxLines="1"
                                android:inputType="textPostalAddress"
                                android:id="@+id/shipping_name_value"
                                android:textColorHint="@color/light_grey_box"
                                android:textSize="@dimen/text_size_14"
                                android:paddingLeft="@dimen/size_10"
                                android:layout_marginTop="@dimen/size_10"
                                android:background="@drawable/rounded_border"/>
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_marginLeft="@dimen/size_7"
                            android:layout_height="wrap_content">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/zip_code"
                                android:id="@+id/zipcode2"
                                android:layout_marginTop="@dimen/size_10"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_14"
                                android:fontFamily="@font/muli_regular"/>

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/text_45"
                                android:gravity="center_vertical"
                                android:hint="@string/zip_code"
                                android:imeOptions="actionNext"
                                android:maxLines="1"
                                android:inputType="number"
                                android:id="@+id/zipcode_value2"
                                android:textColorHint="@color/light_grey_box"
                                android:textSize="@dimen/text_size_14"
                                android:fontFamily="@font/muli_regular"
                                android:paddingLeft="@dimen/size_10"
                                android:layout_marginTop="@dimen/size_10"
                                android:background="@drawable/rounded_border"/>


                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginRight="@dimen/size_7"
                            android:layout_weight="0.5">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/state"
                                android:id="@+id/state2"
                                android:layout_marginTop="@dimen/size_10"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_14"
                                android:fontFamily="@font/muli_regular"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/text_45"
                                android:layout_marginTop="@dimen/size_10"
                                android:paddingRight="@dimen/size_10"
                                android:gravity="center_horizontal|center_vertical"
                                android:background="@drawable/rounded_border"
                                >

                                <TextView
                                    android:id="@+id/ship_state_value"
                                    android:fontFamily="@font/muli_regular"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/text_45"
                                    android:gravity="center_vertical"
                                    android:hint="@string/state"
                                    android:textColor="@color/black"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:inputType="textPostalAddress"
                                    android:textColorHint="@color/light_grey_box"
                                    android:textSize="@dimen/text_size_14"
                                    android:paddingLeft="@dimen/size_10"
                                   />


                            </RelativeLayout>


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="@dimen/size_7"
                            android:layout_weight="0.5">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/country"
                                android:id="@+id/country2"
                                android:layout_marginTop="@dimen/size_10"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_14"
                                android:fontFamily="@font/muli_regular"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/text_45"
                                android:layout_marginTop="@dimen/size_10"
                                android:paddingLeft="@dimen/size_10"
                                android:paddingRight="@dimen/size_10"
                                android:gravity="center_horizontal|center_vertical"
                                android:background="@drawable/rounded_border"
                                >


                                <TextView
                                    android:id="@+id/ship_country_value"
                                    android:fontFamily="@font/muli_regular"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/text_45"
                                    android:gravity="center_vertical"
                                    android:hint="@string/country"
                                    android:textColor="@color/black"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:inputType="textPostalAddress"
                                    android:textColorHint="@color/light_grey_box"
                                    android:textSize="@dimen/text_size_14"
                                    android:paddingLeft="@dimen/size_10"
                                    />


                            </RelativeLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/shipping_type"
                        android:layout_marginTop="@dimen/size_10"
                        android:id="@+id/shiping_type"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14"
                        android:fontFamily="@font/muli_regular"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_45"
                        android:layout_marginTop="@dimen/size_10"
                        android:paddingLeft="@dimen/size_10"
                        android:paddingRight="@dimen/size_10"
                        android:gravity="center_horizontal|center_vertical"
                        android:background="@drawable/rounded_border"
                        >


                        <Spinner
                            android:id="@+id/shipping_spinner2"
                            android:layout_toLeftOf="@id/img9"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/text_45"
                            android:gravity="center_vertical|start"
                            android:dropDownWidth="wrap_content"
                            android:forceHasOverlappingRendering="false"
                            android:spinnerMode="dropdown"
                            android:entries="@array/shippingType"
                            android:textSize="@dimen/text_size_14"
                            android:paddingLeft="@dimen/size_5"
                            android:background="@null"
                            android:dropDownVerticalOffset="@dimen/text_45"
                            />
                        <ImageView
                            android:id="@+id/img9"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_bottom_arrow_black"
                            />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/shipping_address"
                        android:id="@+id/shipping_address"
                        android:layout_marginTop="@dimen/size_15"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14"
                        android:fontFamily="@font/muli_regular"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_70"
                        android:gravity="start"
                        android:hint="@string/address"
                        android:imeOptions="actionDone"
                        android:maxLines="2"
                        android:inputType="textPostalAddress|textMultiLine"
                        android:id="@+id/shipping_address_value"
                        android:textColorHint="@color/light_grey_box"
                        android:textSize="@dimen/text_size_14"
                        android:fontFamily="@font/muli_regular"
                        android:paddingTop="@dimen/size_5"
                        android:paddingLeft="@dimen/size_10"
                        android:layout_marginTop="@dimen/size_10"
                        android:background="@drawable/rounded_border"/>

                </LinearLayout>
                <Button
                    android:id="@+id/done_button"
                    android:layout_width="@dimen/size_100"
                    android:layout_height="@dimen/text_45"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/size_30"
                    android:layout_marginBottom="@dimen/size_30"
                    android:background="@drawable/button_rounded_corner"
                    android:backgroundTint="@color/colorPrimary"
                    android:clickable="true"
                    android:focusable="false"
                    android:fontFamily="@font/muli_bold"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/done"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_16" />
            </LinearLayout>

        </ScrollView>


    </LinearLayout>

</FrameLayout>