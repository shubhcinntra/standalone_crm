<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/main_edit_qt_frame">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         android:orientation="vertical">

        <include
            android:id="@+id/headerBottomRound"
            layout="@layout/header_bottom_rounded"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/size_10"
            android:layout_marginLeft="@dimen/size_15"
            android:layout_marginRight="@dimen/size_15">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:visibility="gone"
                android:id="@+id/name"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14"
                android:fontFamily="@font/muli_regular"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:background="@drawable/rounded_border"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imag5"
                    android:layout_width="@dimen/size_30"
                    android:padding="@dimen/size_5"
                    android:layout_marginLeft="@dimen/size_4"
                    android:src="@drawable/person"
                    android:layout_height="@dimen/size_30"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical|center_horizontal"/>

                <EditText
                    android:id="@+id/name_value"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@id/imag5"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_45"
                    android:gravity="center_vertical"
                    android:hint="@string/first_name"
                    android:layout_gravity="center_vertical"
                    android:inputType="textCapSentences"
                    android:maxLines="1"
                    android:maxLength="100"
                    android:imeOptions="actionNext"
                    android:textColorHint="@color/light_grey_box"
                    android:textSize="@dimen/text_size_14"
                    android:paddingLeft="@dimen/size_5"
                    android:background="@null"
                    />

            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/first_name"

                android:id="@+id/first_name"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14"
                android:fontFamily="@font/muli_regular"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:background="@drawable/rounded_border"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="@dimen/size_30"
                    android:padding="@dimen/size_5"
                    android:layout_height="@dimen/size_30"
                    android:layout_marginLeft="@dimen/size_4"
                    android:layout_centerVertical="true"
                    android:src="@drawable/person"
                    android:layout_gravity="center_vertical|center_horizontal"/>

                <EditText
                    android:id="@+id/first_name_value"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@id/image1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_45"
                    android:gravity="center_vertical"
                    android:hint="@string/first_name"
                    android:layout_gravity="center_vertical"
                    android:inputType="textCapSentences"
                    android:maxLines="1"
                    android:maxLength="100"
                    android:imeOptions="actionNext"
                    android:textColorHint="@color/light_grey_box"
                    android:textSize="@dimen/text_size_14"
                    android:paddingLeft="@dimen/size_5"
                    android:paddingRight="@dimen/size_5"
                    android:background="@null"
                    />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/last_name"
                android:id="@+id/last_name"
                android:layout_marginTop="@dimen/size_15"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14"
                android:fontFamily="@font/muli_regular"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:background="@drawable/rounded_border"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="@dimen/size_30"
                    android:padding="@dimen/size_5"
                    android:layout_height="@dimen/size_30"
                    android:src="@drawable/person"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/size_4"
                    android:layout_gravity="center_vertical|center_horizontal"/>

                <EditText
                    android:id="@+id/last_name_value"
                    android:maxLength="100"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_45"
                    android:gravity="center_vertical"
                    android:hint="@string/last_name"
                    android:layout_toRightOf="@id/image2"
                    android:layout_gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:inputType="textCapSentences"
                    android:maxLines="1"
                    android:imeOptions="actionNext"
                    android:textColorHint="@color/light_grey_box"
                    android:textSize="@dimen/text_size_14"
                    android:paddingLeft="@dimen/size_5"
                    android:paddingRight="@dimen/size_5"

                    android:background="@null"
                    />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bussiness_partner"
                android:id="@+id/business_partner"
                android:layout_marginTop="@dimen/size_15"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14"
                android:fontFamily="@font/muli_regular"/>

            <RelativeLayout
                android:id="@+id/bussinessPartner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_45"
                android:layout_marginTop="@dimen/size_10"
                android:paddingLeft="@dimen/size_10"
                android:paddingRight="@dimen/size_10"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:background="@drawable/rounded_border_edit">

                <EditText
                    android:layout_centerVertical="true"
                    android:focusable="false"
                    android:duplicateParentState="false"
                    android:id="@+id/business_partner_value"
                    android:layout_toLeftOf="@id/img"
                    android:background="@color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="start|center_vertical"
                    android:hint="@string/bussiness_partner"
                    android:paddingRight="@dimen/size_5"
                    android:inputType="textCapSentences"
                    android:maxLines="1"
                    android:imeOptions="actionNext"
                    android:textColorHint="@color/light_grey_box"
                    android:textSize="@dimen/text_size_14"
                    android:paddingLeft="@dimen/size_5"

                    />
                <ImageView
                    android:id="@+id/img"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:paddingTop="@dimen/size_5"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_forword_arrow_black"
                    />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/position"
                android:id="@+id/reports_to"
                android:layout_marginTop="@dimen/size_15"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14"
                android:fontFamily="@font/muli_regular"/>

            <EditText
                android:maxLength="100"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_45"
                android:gravity="center_vertical"

                android:hint="@string/position"
                android:inputType="textCapSentences"
                android:maxLines="1"
                android:paddingRight="@dimen/size_5"
                android:imeOptions="actionNext"
                android:id="@+id/position_value"
                android:textColorHint="@color/light_grey_box"
                android:textSize="@dimen/text_size_14"
                android:paddingLeft="@dimen/size_15"
                android:layout_marginTop="@dimen/size_10"
                android:background="@drawable/rounded_border"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/department"
                android:id="@+id/department"
                android:layout_marginTop="@dimen/size_15"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14"
                android:fontFamily="@font/muli_regular"/>


            <RelativeLayout
                android:id="@+id/departmentview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_45"
                android:layout_marginTop="@dimen/size_10"
                android:paddingLeft="@dimen/size_10"
                android:paddingRight="@dimen/size_10"
                android:gravity="center_vertical"
                android:background="@drawable/rounded_border_edit">
                <Spinner
                    android:id="@+id/department_spinner"
                    android:layout_toLeftOf="@id/imgr"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_45"
                    android:gravity="center_vertical|start"
                    android:dropDownWidth="wrap_content"
                    android:forceHasOverlappingRendering="false"
                    android:spinnerMode="dropdown"
                    android:textSize="@dimen/text_size_14"
                    android:background="@null"
                    android:dropDownVerticalOffset="@dimen/text_45"
                    />
                <ImageView
                    android:id="@+id/imgr"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_bottom_arrow_black"
                    />

            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/role"
                android:id="@+id/role"
                android:layout_marginTop="@dimen/size_15"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14"
                android:fontFamily="@font/muli_regular"/>


            <RelativeLayout
                android:id="@+id/roleview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_45"
                android:layout_marginTop="@dimen/size_10"
                android:paddingLeft="@dimen/size_10"
                android:paddingRight="@dimen/size_10"
                android:gravity="center_vertical"
                android:background="@drawable/rounded_border_edit">
                <Spinner
                    android:id="@+id/role_spinner"
                    android:layout_toLeftOf="@id/imge"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_45"
                    android:gravity="center_vertical|start"
                    android:dropDownWidth="wrap_content"
                    android:forceHasOverlappingRendering="false"
                    android:spinnerMode="dropdown"
                    android:textSize="@dimen/text_size_14"
                    android:background="@null"
                    android:dropDownVerticalOffset="@dimen/text_45"
                    />



                <ImageView
                    android:id="@+id/imge"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_bottom_arrow_black"
                    />

            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/contact_owner"
                android:visibility="gone"
                android:id="@+id/contact_owner"
                android:layout_marginTop="@dimen/size_15"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14"
                android:fontFamily="@font/muli_regular"/>


            <RelativeLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:gravity="center_horizontal|center_vertical"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:background="@drawable/rounded_border"
                >


                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="@dimen/size_30"
                    android:padding="@dimen/size_5"
                    android:layout_height="@dimen/size_30"
                    android:src="@drawable/person"
                    android:layout_marginLeft="@dimen/size_4"
                    android:layout_centerVertical="true"
                   />

                <EditText
                    android:maxLength="100"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_45"
                    android:gravity="center_vertical"
                    android:hint="@string/contact_owner"
                    android:inputType="textCapSentences"
                    android:maxLines="1"
                    android:imeOptions="actionNext"
                    android:id="@+id/contact_owner_value"
                    android:textColorHint="@color/light_grey_box"
                    android:textSize="@dimen/text_size_14"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@id/image3"
                    android:paddingLeft="@dimen/size_5"
                    android:paddingRight="@dimen/size_5"
                    />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mobile"
                android:id="@+id/mobile"
                android:layout_marginTop="@dimen/size_15"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14"
                android:fontFamily="@font/muli_regular"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:gravity="center_horizontal|center_vertical"
                android:background="@drawable/rounded_border"
                >

                <ImageView
                    android:id="@+id/image4"
                    android:padding="@dimen/size_5"
                    android:layout_width="@dimen/size_30"
                    android:layout_height="@dimen/size_30"
                    android:src="@drawable/ic_phone_icon"
                    android:layout_marginLeft="@dimen/size_4"
                    android:layout_centerVertical="true"/>

                <EditText

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_45"
                    android:gravity="center_vertical"
                    android:hint="@string/mobile"
                    android:inputType="phone|number"
                    android:maxLines="1"
                    android:maxLength="12"
                    android:imeOptions="actionNext"
                    android:id="@+id/mobile_value"
                    android:textColorHint="@color/light_grey_box"
                    android:textSize="@dimen/text_size_14"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/image4"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="@dimen/size_5"
                    android:paddingRight="@dimen/size_5"
                    />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:id="@+id/email"
                android:inputType="textEmailAddress"
                android:layout_marginTop="@dimen/size_15"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14"
                android:fontFamily="@font/muli_regular"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:gravity="center_horizontal|center_vertical"
                android:background="@drawable/rounded_border"
                >

                <ImageView
                    android:id="@+id/image5"
                    android:layout_width="@dimen/size_30"
                    android:layout_height="@dimen/size_30"
                    android:src="@drawable/ic_message"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/size_4"
                    android:padding="@dimen/size_5"
                    />

                <EditText
                    android:maxLength="100"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_45"
                    android:gravity="center_vertical"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:imeOptions="actionNext"
                    android:id="@+id/email_value"
                    android:textColorHint="@color/light_grey_box"
                    android:textSize="@dimen/text_size_14"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@id/image5"
                    android:paddingLeft="@dimen/size_5"
                    android:paddingRight="@dimen/size_5"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/website"
                android:id="@+id/website"
                android:layout_marginTop="@dimen/size_15"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14"
                android:visibility="gone"
                android:fontFamily="@font/muli_regular"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:visibility="gone"
                android:gravity="center_horizontal|center_vertical"
                android:background="@drawable/rounded_border"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image6"
                    android:layout_width="@dimen/size_30"
                    android:layout_height="@dimen/size_30"
                    android:src="@drawable/ic_globe"
                    android:layout_marginLeft="@dimen/size_4"
                    android:padding="@dimen/size_5"
                    android:layout_centerVertical="true"/>

                <EditText

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_45"
                    android:gravity="center_vertical"
                    android:hint="@string/website"
                    android:inputType="textCapSentences"
                    android:maxLines="1"
                    android:maxLength="100"
                    android:imeOptions="actionNext"
                    android:id="@+id/website_value"
                    android:textColorHint="@color/light_grey_box"
                    android:textSize="@dimen/text_size_14"
                    android:background="@null"
                   android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@id/image6"
                    android:paddingLeft="@dimen/size_5"
                    android:paddingRight="@dimen/size_5"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/address"
                android:id="@+id/address"
                android:layout_marginTop="@dimen/size_15"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14"
                android:fontFamily="@font/muli_regular"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:gravity="center_horizontal|center_vertical"
                android:background="@drawable/rounded_border"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image7"
                    android:layout_width="@dimen/size_30"
                    android:layout_height="@dimen/size_30"
                    android:layout_marginLeft="@dimen/size_4"
                    android:padding="@dimen/size_5"
                    android:src="@drawable/ic_location_icon"
                    />

                <EditText
                    android:maxLength="200"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_70"
                    android:gravity="start"
                    android:hint="@string/address"
                    android:inputType="textPostalAddress|textMultiLine"
                    android:maxLines="2"
                    android:imeOptions="actionDone"
                    android:id="@+id/address_value"
                    android:textColorHint="@color/light_grey_box"
                    android:textSize="@dimen/text_size_14"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@id/image7"
                    android:padding="@dimen/size_5"
                    />
            </RelativeLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimary"
                android:background="@drawable/button_rounded_corner"
                android:text="@string/create"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:clickable="true"
                android:layout_marginBottom="@dimen/size_15"
                android:focusable="true"
                android:fontFamily="@font/muli_regular"
                android:id="@+id/create_button"
                android:textSize="@dimen/text_size_18"
                android:gravity="center"
                android:layout_marginTop="@dimen/size_50"
                />
        </LinearLayout>

    </ScrollView>
    </LinearLayout>
    <include
        android:id="@+id/loader"
        layout="@layout/loader"/>
</FrameLayout>