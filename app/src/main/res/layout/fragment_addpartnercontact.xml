<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.BlankFragment"
    android:background="@color/white"
    android:id="@+id/quatoes_main_container">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/header"
            android:scrollbars="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/size_15"
                android:layout_marginLeft="@dimen/size_15"
                android:layout_marginRight="@dimen/size_15">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/contact_detail"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16"
                    android:fontFamily="@font/muli_bold"
                    android:id="@+id/total"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/contact_owner_mand"
                    android:layout_marginTop="@dimen/size_15"
                    android:id="@+id/conatct_owner"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14"
                    android:fontFamily="@font/muli_regular"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10"
                    android:background="@drawable/rounded_border"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image2"
                        android:layout_width="@dimen/size_30"
                        android:layout_height="@dimen/size_30"
                        android:padding="@dimen/size_5"
                        android:layout_margin="@dimen/size_5"
                        android:src="@drawable/person"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true" />

                    <EditText
                        android:id="@+id/contact_owner_value"
                        android:maxLength="100"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_45"
                        android:gravity="center_vertical"
                        android:hint="@string/contact_owner"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_toRightOf="@id/image2"
                        android:inputType="text"
                        android:maxLines="1"
                        android:imeOptions="actionNext"
                        android:textColorHint="@color/light_grey_box"
                        android:textSize="@dimen/text_size_14"
                        android:paddingLeft="@dimen/size_5"
                        android:background="@null"
                        />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mobile_mand"
                    android:id="@+id/mobile"
                    android:layout_marginTop="@dimen/size_15"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14"
                    android:fontFamily="@font/muli_regular"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10"
                    android:background="@drawable/rounded_border"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image4"
                        android:layout_width="@dimen/size_30"
                        android:layout_height="@dimen/size_30"
                        android:src="@drawable/ic_phone_icon"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/size_5"
                        android:padding="@dimen/size_5"
                        />
                    <EditText
                        android:id="@+id/mobile_value"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_45"
                        android:gravity="center_vertical"
                        android:hint="@string/mobile"
                        android:inputType="phone|number"
                        android:maxLines="1"
                        android:maxLength="10"
                        android:imeOptions="actionNext"
                        android:textColorHint="@color/light_grey_box"
                        android:textSize="@dimen/text_size_14"
                        android:background="@null"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_toRightOf="@id/image4"
                        android:paddingLeft="@dimen/size_5"
                        android:paddingRight="@dimen/size_5"
                        />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/email"
                    android:id="@+id/email"
                    android:layout_marginTop="@dimen/size_15"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14"
                    android:fontFamily="@font/muli_regular"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@drawable/rounded_border">

                    <ImageView
                        android:id="@+id/image5"
                        android:layout_width="@dimen/size_30"
                        android:layout_height="@dimen/size_30"
                        android:src="@drawable/ic_message"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/size_5"
                        android:layout_margin="@dimen/size_5"
                        />

                    <EditText
                        android:maxLength="100"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_45"
                        android:gravity="center_vertical"
                        android:hint="@string/email"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:imeOptions="actionNext"
                        android:id="@+id/email_value"
                        android:textColorHint="@color/light_grey_box"
                        android:textSize="@dimen/text_size_14"
                        android:background="@null"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/image5"
                        android:paddingLeft="@dimen/size_5"
                        android:paddingRight="@dimen/size_5"
                        />
                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/website_mand"
                    android:id="@+id/website"
                    android:layout_marginTop="@dimen/size_15"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14"
                    android:fontFamily="@font/muli_regular"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@drawable/rounded_border"
                    >

                    <ImageView
                        android:id="@+id/image6"
                        android:layout_width="@dimen/size_30"
                        android:layout_height="@dimen/size_30"
                        android:src="@drawable/ic_globe"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/size_5"
                        android:layout_margin="@dimen/size_5"
                        android:layout_gravity="center_vertical|center_horizontal"/>

                    <EditText

                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_45"
                        android:gravity="center_vertical"
                        android:hint="@string/website"
                        android:inputType="textUri"
                        android:maxLines="1"
                        android:maxLength="100"
                        android:imeOptions="actionNext"
                        android:id="@+id/website_value"
                        android:textColorHint="@color/light_grey_box"
                        android:textSize="@dimen/text_size_14"
                        android:background="@null"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_toRightOf="@id/image6"
                        android:paddingLeft="@dimen/size_5"
                        android:paddingRight="@dimen/size_5"
                        />
                </RelativeLayout>

                <include
                    android:id="@+id/address_section"
                    layout="@layout/address_section"/>
                <TextView
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/bill_to"
                    android:id="@+id/bill_to"
                    android:layout_marginTop="@dimen/size_15"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14"
                    android:fontFamily="@font/muli_regular"/>

                <RelativeLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@drawable/rounded_border"
                    >

                    <ImageView
                        android:id="@+id/image7"
                        android:layout_width="@dimen/size_30"
                        android:layout_height="@dimen/size_30"
                        android:src="@drawable/ic_location_icon"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/size_5"
                        android:layout_margin="@dimen/size_5"
                        />

                    <EditText
                        android:maxLength="100"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_45"
                        android:gravity="center_vertical"
                        android:hint="@string/bill_to"
                        android:inputType="textPostalAddress"
                        android:maxLines="1"
                        android:imeOptions="actionNext"
                        android:id="@+id/bill_to_value"
                        android:textColorHint="@color/light_grey_box"
                        android:textSize="@dimen/text_size_14"
                        android:background="@null"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:paddingLeft="@dimen/size_5"
                        android:paddingRight="@dimen/size_5"
                        android:layout_toRightOf="@id/image7"
                        />
                </RelativeLayout>

                <TextView
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ship_to"
                    android:id="@+id/ship_to"
                    android:layout_marginTop="@dimen/size_15"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14"
                    android:fontFamily="@font/muli_regular"/>

                <RelativeLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@drawable/rounded_border"
                    >

                    <ImageView
                        android:id="@+id/image8"
                        android:layout_width="@dimen/size_30"
                        android:layout_height="@dimen/size_30"
                        android:src="@drawable/ic_location_icon"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/size_5"
                        android:layout_margin="@dimen/size_5"
                        android:layout_gravity="start|center"/>

                    <EditText
                        android:maxLength="100"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_45"
                        android:gravity="center_vertical"
                        android:hint="@string/ship_to"
                        android:inputType="textPostalAddress"
                        android:maxLines="1"
                        android:imeOptions="actionNext"
                        android:id="@+id/ship_to_value"
                        android:textColorHint="@color/light_grey_box"
                        android:textSize="@dimen/text_size_14"
                        android:background="@null"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_toRightOf="@id/image8"
                        android:paddingRight="@dimen/size_5"
                        android:paddingLeft="@dimen/size_5"
                        />

                </RelativeLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/remarks"
                    android:id="@+id/remarks"
                    android:layout_marginTop="@dimen/size_15"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14"
                    android:fontFamily="@font/muli_regular"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_100"
                    android:gravity="start"
                    android:maxLines="5"
                    android:hint="@string/remarks"
                    android:maxLength="200"
                    android:inputType="textMultiLine"
                    android:layout_marginTop="@dimen/size_10"
                    android:imeOptions="actionDone"
                    android:id="@+id/remarks_value"
                    android:textColorHint="@color/light_grey_box"
                    android:textSize="@dimen/text_size_14"
                    android:background="@drawable/rounded_border"
                    android:padding="@dimen/size_8"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/attachment"
                    android:id="@+id/attachment"
                    android:layout_marginTop="@dimen/size_15"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14"
                    android:visibility="gone"
                    android:fontFamily="@font/muli_regular"/>

                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/uploadview"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_100"
                    android:layout_marginTop="@dimen/size_10"
                    android:gravity="center"
                    android:background="@drawable/rounded_border"
                    >

                    <ImageView
                        android:id="@+id/upload_img"
                        android:layout_width="@dimen/size_50"
                        android:layout_height="@dimen/size_50"
                        android:src="@drawable/ic_upload"
                        android:layout_centerInParent="true"
                        android:layout_gravity="start|center"/>

                </RelativeLayout>



                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_rounded_corner"
                    android:text="@string/create"
                    app:backgroundTint="@color/colorPrimary"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:clickable="true"
                    android:layout_marginBottom="@dimen/size_15"
                    android:focusable="true"
                    android:fontFamily="@font/muli_regular"
                    android:id="@+id/create_button"
                    android:textSize="@dimen/text_size_18"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/size_50"
                    />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</FrameLayout>
