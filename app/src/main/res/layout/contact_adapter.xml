<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/size_8"
        app:cardUseCompatPadding="true"
        android:layout_margin="@dimen/size_5"
        android:elevation="@dimen/size_8"
        app:cardMaxElevation="@dimen/size_8"
        app:cardElevation="@dimen/size_8"
        android:background="@color/white"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="@dimen/size_5"
            android:padding="@dimen/size_5"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/profile_pic"
                android:layout_width="@dimen/size_50"
                android:layout_height="@dimen/size_50"
                android:layout_centerVertical="true"
                android:background="@drawable/person_avatar"
                android:padding="@dimen/size_5" />

            <TextView
                android:id="@+id/name_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mr. Pankaj Sharma"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_16"
                android:fontFamily="@font/muli_bold"
                android:layout_marginLeft="@dimen/size_10"
                android:layout_toRightOf="@id/profile_pic"/>

            <TextView
                android:id="@+id/role_val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Developer"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14"
                android:layout_marginTop="@dimen/size_5"
                android:layout_marginLeft="@dimen/size_10"
                android:layout_toRightOf="@id/profile_pic"
                android:layout_below="@id/name_value"
                android:fontFamily="@font/muli_regular"
                />


            <ImageView
                android:layout_width="@dimen/size_35"
                android:layout_height="@dimen/size_35"
                android:padding="@dimen/size_5"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/size_15"
                android:id="@+id/chat"
                android:background="@drawable/chat_icon"/>

            <ImageView
                android:layout_width="@dimen/size_35"
                android:layout_height="@dimen/size_35"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/chat"
                android:layout_marginRight="@dimen/size_20"
                android:id="@+id/call"
                android:background="@drawable/blue_call"/>
        </RelativeLayout>


    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>