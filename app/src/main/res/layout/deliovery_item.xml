<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_margin="@dimen/text_size_10"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/title"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16"
            android:text="@string/stage_End_date"
            android:fontFamily="@font/muli_bold"/>
        <TextView
            android:id="@+id/doc_date"
            android:layout_below="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/hint_color"
            android:textSize="@dimen/text_size_14"
            android:text="@string/stage_End_date"
            android:fontFamily="@font/muli_regular"
            android:layout_marginTop="@dimen/text_size_1"/>


        <ImageView
            android:id="@+id/arr"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/text_size_24"
            android:layout_height="@dimen/text_size_24"
            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"/>


        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_size_1"
            android:layout_marginRight="@dimen/text_size_2"
            android:layout_toLeftOf="@id/arr"
            android:fontFamily="@font/muli_regular"
            android:text="@string/open"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/text_size_12" />


        <TextView
            android:id="@+id/amount"
            android:layout_below="@+id/arr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/hint_color"
            android:textSize="@dimen/text_size_15"
            android:text="Amount"
            android:fontFamily="@font/muli_regular"
            android:layout_marginTop="@dimen/text_size_1"/>
    </RelativeLayout>


    <View
        android:layout_marginTop="@dimen/text_size_10"
        android:layout_marginLeft="@dimen/text_size_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_size_1"
        android:background="@color/hint_color"/>

</LinearLayout>