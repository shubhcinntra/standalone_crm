<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/main_edit_qt_frame"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <include
        android:id="@+id/header_frame"
        app:layout_constraintTop_toTopOf="parent"
        layout="@layout/header_bottom_rounded"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/header_frame">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/size_40"
            android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/size_10"
            android:layout_marginRight="@dimen/size_10">




            <RelativeLayout
                android:layout_width="match_parent"
                android:paddingTop="@dimen/size_15"
                android:layout_height="wrap_content">

            <TextView
                android:id="@+id/opportunity_name_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_16"
                android:fontFamily="@font/muli_bold"/>

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="@dimen/size_20"
                    android:id="@+id/option"
                    android:layout_alignParentRight="true">



                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:background="@drawable/threedots"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/add_stage"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/ic_baseline_add_24"
                    android:backgroundTint="@color/colorPrimary"
                    android:layout_marginRight="@dimen/size_30"
                    android:layout_toLeftOf="@id/option"/>

            </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/recyclerView"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_15"/>


            <Button
                android:visibility="gone"
                android:id="@+id/markascurrent"
                android:layout_width="@dimen/graph_280"
                android:layout_height="wrap_content"
                android:text="@string/markascomplete"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="@dimen/size_15"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/white"/>


            <Button
                android:id="@+id/markascomplete"
                android:visibility="visible"
                android:layout_width="@dimen/graph_280"
                android:layout_height="wrap_content"
                android:text="@string/markascomplete"
                android:drawableLeft="@drawable/ic_baseline_check_24"
                android:textAllCaps="false"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/size_15"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/white"/>


            <Button
                android:id="@+id/complete"
                android:visibility="gone"
                android:layout_width="@dimen/graph_280"
                android:layout_height="wrap_content"
                android:text="@string/complete"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="@dimen/size_15"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/white"/>





        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="@dimen/size_15"
            android:background="@color/veryLightGrey"
            />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/size_20"
                android:layout_marginTop="@dimen/size_20"
                >

                <RelativeLayout
                    android:id="@+id/activity_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">



                <ImageView
                    android:id="@+id/activity"
                    android:layout_width="@dimen/size_45"
                    android:layout_height="@dimen/size_45"
                    android:background="@drawable/activity_image"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activity"
                    android:text="@string/activity"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/size_8"/>


                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/chatterView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_30">
                <ImageView
                    android:layout_width="@dimen/size_45"
                    android:layout_height="@dimen/size_45"
                    android:id="@+id/chat"
                    android:background="@drawable/chat_image"/>



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/chat"
                        android:text="@string/chat"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="@dimen/size_8"/>

                </RelativeLayout>


            </LinearLayout>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_15"
                app:cardPreventCornerOverlap="true"
                app:cardBackgroundColor="@color/white"
                app:cardMaxElevation="@dimen/size_4"
                app:cardElevation="@dimen/size_4"
                app:cardCornerRadius="@dimen/size_8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_20"
                    android:layout_margin="@dimen/size_10"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/sapsupportforcinntra"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_16"
                        android:id="@+id/mainName"
                        android:fontFamily="@font/muli_bold"/>

                        <LinearLayout
                            android:gravity="center"
                            android:layout_width="20dp"
                            android:layout_height="@dimen/size_20"
                            android:id="@+id/multioption"
                            android:layout_alignParentRight="true">

                        <ImageView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/threedots"
                            android:layout_alignParentRight="true"/>
                        </LinearLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/size_20"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:text="@string/contact_person"
                                android:textSize="@dimen/text_size_15"
                                android:fontFamily="@font/muli_regular"
                                android:textColor="@color/grey"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:visibility="gone"
                                android:layout_marginTop="@dimen/size_8"
                                android:text="@string/ratings"
                                android:textSize="@dimen/text_size_15"
                                android:fontFamily="@font/muli_regular"
                                android:textColor="@color/grey"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:layout_marginTop="@dimen/size_8"
                                android:text="@string/potential_ammount"
                                android:textSize="@dimen/text_size_15"
                                android:fontFamily="@font/muli_regular"
                                android:textColor="@color/grey"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:layout_marginTop="@dimen/size_8"
                                android:text="@string/close_date"
                                android:textSize="@dimen/text_size_15"
                                android:fontFamily="@font/muli_regular"
                                android:textColor="@color/grey"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:layout_marginTop="@dimen/size_8"
                                android:text="@string/owner"
                                android:textSize="@dimen/text_size_15"
                                android:fontFamily="@font/muli_regular"
                                android:textColor="@color/grey"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:layout_marginTop="@dimen/size_8"
                                android:text="@string/type"
                                android:textSize="@dimen/text_size_15"
                                android:fontFamily="@font/muli_regular"
                                android:textColor="@color/grey"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:layout_marginTop="@dimen/size_8"
                                android:text="@string/probability"
                                android:textSize="@dimen/text_size_15"
                                android:fontFamily="@font/muli_regular"
                                android:textColor="@color/grey"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:layout_marginTop="@dimen/size_8"
                                android:text="@string/stage"
                                android:textSize="@dimen/text_size_15"
                                android:fontFamily="@font/muli_regular"
                                android:textColor="@color/grey"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:layout_marginTop="@dimen/size_8"
                                android:text="@string/lead_source"
                                android:textSize="@dimen/text_size_15"
                                android:fontFamily="@font/muli_regular"
                                android:textColor="@color/grey"/>



                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">


                            <TextView
                                android:id="@+id/contact_person"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:fontFamily="@font/muli_regular"
                                android:maxLines="1"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_15" />


                            <RatingBar
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/size_10"
                                style="@style/Widget.AppCompat.RatingBar.Small"
                                android:numStars="5"/>

                            <TextView
                                android:id="@+id/potential_amount_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:layout_marginTop="@dimen/size_10"
                                android:textSize="@dimen/text_size_15"
                                android:fontFamily="@font/muli_regular"
                                android:textColor="@color/black"/>

                            <TextView
                                android:id="@+id/close_date_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:layout_marginTop="@dimen/size_8"
                                android:textSize="@dimen/text_size_15"
                                android:fontFamily="@font/muli_regular"
                                android:textColor="@color/black"/>


                            <TextView
                                android:id="@+id/opportunity_owner_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:layout_marginTop="@dimen/size_8"
                                android:textSize="@dimen/text_size_15"
                                android:fontFamily="@font/muli_regular"
                                android:textColor="@color/black"/>


                            <TextView
                                android:id="@+id/type_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:layout_marginTop="@dimen/size_8"
                                android:textSize="@dimen/text_size_15"
                                android:fontFamily="@font/muli_regular"
                                android:textColor="@color/black"/>


                            <TextView
                                android:id="@+id/probability_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:layout_marginTop="@dimen/size_8"
                                android:textSize="@dimen/text_size_15"
                                android:fontFamily="@font/muli_regular"
                                android:textColor="@color/black"/>


                            <TextView
                                android:id="@+id/stage_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:layout_marginTop="@dimen/size_8"
                                android:textSize="@dimen/text_size_15"
                                android:fontFamily="@font/muli_regular"
                                android:textColor="@color/black"/>

                            <TextView
                                android:id="@+id/lead_source_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:layout_marginTop="@dimen/size_8"
                                android:textSize="@dimen/text_size_15"
                                android:fontFamily="@font/muli_regular"
                                android:textColor="@color/black"/>



                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/bottom_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">





                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:layout_marginTop="@dimen/size_8"
                                android:text="@string/created_by"
                                android:textSize="@dimen/text_size_15"
                                android:fontFamily="@font/muli_regular"
                                android:textColor="@color/grey"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:layout_marginTop="@dimen/size_8"
                                android:text="@string/modified_by"
                                android:textSize="@dimen/text_size_15"
                                android:fontFamily="@font/muli_regular"
                                android:textColor="@color/grey"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/createdby_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:layout_marginTop="@dimen/size_8"
                                android:text="@string/name"
                                android:textSize="@dimen/text_size_15"
                                android:fontFamily="@font/muli_regular"
                                android:textColor="@color/black"/>

                            <TextView
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:text="@string/date"
                                android:textSize="@dimen/text_size_15"
                                android:fontFamily="@font/muli_regular"
                                android:textColor="@color/black"/>


                            <TextView
                                android:id="@+id/modified_on"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:layout_marginTop="@dimen/size_8"
                                android:text="@string/name"
                                android:textSize="@dimen/text_size_15"
                                android:fontFamily="@font/muli_regular"
                                android:textColor="@color/black"/>
                            <TextView
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:text="@string/date"
                                android:textSize="@dimen/text_size_15"
                                android:fontFamily="@font/muli_regular"
                                android:textColor="@color/black"/>

                        </LinearLayout>


                    </LinearLayout>


                    <TextView
                        android:id="@+id/seemore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/see_more"
                        android:textSize="@dimen/text_size_14"
                        android:layout_marginTop="@dimen/size_15"
                        android:layout_marginRight="@dimen/size_10"
                        android:layout_gravity="end"/>

                </LinearLayout>



            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
               android:id="@+id/bottom_commentview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_15"
                android:layout_marginRight="@dimen/size_15"
                android:layout_marginTop="@dimen/size_15"
                android:layout_marginBottom="@dimen/size_40"
                app:cardPreventCornerOverlap="true"
                app:cardBackgroundColor="@color/white"
                app:cardMaxElevation="@dimen/size_4"
                app:cardElevation="@dimen/size_4"
                app:cardCornerRadius="@dimen/size_8">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/size_10"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/comment"
                        android:textSize="@dimen/text_size_16"
                        android:textColor="@color/black"
                        android:fontFamily="@font/muli_semibold"/>


                    <TextView
                        android:id="@+id/comments_val"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/comment"
                        android:textSize="@dimen/text_size_15"
                        android:layout_marginTop="@dimen/text_size_15"
                        android:textColor="@color/black"
                        android:fontFamily="@font/muli_regular"/>


                    <RelativeLayout
                        android:visibility="gone"
                        android:layout_width="@dimen/size_200"
                        android:layout_height="@dimen/size_100"
                        android:layout_marginTop="@dimen/size_15"
                        android:background="@drawable/rounded_border_blue">


                    <ImageView
                        android:layout_width="@dimen/size_40"
                        android:layout_height="@dimen/size_40"
                        android:layout_centerInParent="true"
                        android:background="@drawable/gallery" />
                    </RelativeLayout>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>






        </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/loader"
        android:visibility="gone"
        style="@style/SpinKitView.Large.Circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_gravity="center"
        app:SpinKit_Color="@color/colorPrimary" />


</androidx.constraintlayout.widget.ConstraintLayout>