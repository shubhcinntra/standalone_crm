                    android:id="@+id/month_1"
                    android:theme="@style/selectedText"
                    android:background="@drawable/text_selected_rounded_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="@dimen/size_80"
                    android:textColor="@color/white"
                    android:text="@string/month_1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                        <TextView
                        android:id="@+id/month_3"
                        android:theme="@style/selectedText"
                        android:background="@drawable/text_rounded_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                            android:minWidth="@dimen/size_80"
                        android:text="@string/month_3"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/month_6"
                        android:theme="@style/selectedText"
                        android:background="@drawable/text_rounded_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="@dimen/size_80"
                        android:text="@string/month_6"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/year"
                        android:theme="@style/selectedText"
                        android:background="@drawable/text_rounded_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="@dimen/size_80"
                        android:text="@string/year"/>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ProgressBar
                            android:id="@+id/current_progress_bar"
                            style="@style/CircularDeterminateProgressBar"
                            android:layout_width="@dimen/size_80"
                            android:layout_height="@dimen/size_80"
                            tools:progress="60" />
                        <TextView
                            android:layout_gravity="center"
                            android:id="@+id/current_progress_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:textSize="@dimen/text_size_12"
                            android:textColor="@color/black"
                            android:fontFamily="@font/muli_semibold"
                            tools:text="60%" />
                    </FrameLayout>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ProgressBar
                            android:id="@+id/initial_progress_bar"
                            style="@style/CircularDeterminateProgressBar"
                            android:layout_width="@dimen/size_80"
                            android:layout_height="@dimen/size_80"
                            tools:progress="60" />
                        <TextView
                            android:layout_gravity="center"
                            android:id="@+id/initial_progress_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:textSize="@dimen/text_size_12"
                            android:textColor="@color/black"
                            android:fontFamily="@font/muli_semibold"
                            tools:text="60%" />
                    </FrameLayout>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ProgressBar
                            android:id="@+id/actual_progress_bar"
                            style="@style/CircularDeterminateProgressBar"
                            android:layout_width="@dimen/size_80"
                            android:layout_height="@dimen/size_80"
                            tools:progress="60" />
                        <TextView
                            android:layout_gravity="center"
                            android:id="@+id/actual_progress_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:textSize="@dimen/text_size_12"
                            android:textColor="@color/black"
                            android:fontFamily="@font/muli_bold"
                            tools:text="60%" />
                    </FrameLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/current_projection_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="34534"
                    android:maxLines="1"
                    android:textSize="@dimen/text_size_14"
                    android:fontFamily="@font/muli_bold"/>
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/initial_projection_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="34534"
                    android:maxLines="1"
                    android:textSize="@dimen/text_size_14"
                    android:fontFamily="@font/muli_bold"/>
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/actual_projection_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="34534"
                    android:maxLines="1"
                    android:textSize="@dimen/text_size_14"
                    android:fontFamily="@font/muli_bold"/>


            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="@dimen/size_5"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/current_projection_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/light_gray"
                    android:text="@string/current_proj"
                    android:maxLines="1"
                    android:textSize="@dimen/text_size_12"
                    android:fontFamily="@font/muli_regular"/>
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/initial_projection_initial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/light_gray"
                    android:text="@string/intial_proj"
                    android:maxLines="1"
                    android:textSize="@dimen/text_size_12"
                    android:fontFamily="@font/muli_regular"/>
                <TextView
