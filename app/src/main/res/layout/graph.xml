                    android:id="@+id/actual_projection_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/light_gray"
                    android:text="@string/act_proj"
                    android:maxLines="1"
                    android:textSize="@dimen/text_size_12"
                    android:fontFamily="@font/muli_regular"/>


            </LinearLayout>

        </LinearLayout>
        </androidx.cardview.widget.CardView>








        <LinearLayout
            android:visibility="visible"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <androidx.cardview.widget.CardView
                android:layout_marginLeft="@dimen/size_10"
                android:layout_marginRight="@dimen/size_10"
                android:layout_marginTop="@dimen/size_5"
                android:layout_marginBottom="@dimen/size_5"
                android:elevation="@dimen/text_size_6"
                app:cardCornerRadius="@dimen/size_10"
                app:cardBackgroundColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                android:visibility="visible"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/top_5_txt"
                    android:layout_marginLeft="@dimen/text_size_15"
                    android:layout_marginTop="@dimen/text_size_10"
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/muli_semibold"
                    android:textSize="@dimen/text_size_14"
                    android:text="@string/top_5_sales_txt"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <com.github.mikephil.charting.charts.BarChart
                  android:id="@+id/customer_barChart"
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/graph_280"
                  android:padding="0dp"/>
                </LinearLayout>
                <LinearLayout
                 android:layout_marginLeft="@dimen/size_25"
                 android:layout_marginBottom="@dimen/padding_10"
                 android:orientation="horizontal"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">
               <TextView
                 android:id="@+id/cus_1"
                 android:gravity="center_horizontal"
                 android:layout_weight="1"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:textColor="@color/black"
                 android:textSize="@dimen/text_size_12"
                 android:fontFamily="@font/muli_semibold"
                 android:maxLines="1"
                 android:text="item "/>
      <TextView
          android:id="@+id/cus_2"
          android:gravity="center_horizontal"
          android:layout_weight="1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textColor="@color/black"
          android:textSize="@dimen/text_size_12"
          android:fontFamily="@font/muli_semibold"
          android:maxLines="1"
          android:text="item "/>
      <TextView
          android:id="@+id/cus_3"
          android:gravity="center_horizontal"
          android:layout_weight="1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textColor="@color/black"
          android:textSize="@dimen/text_size_12"
          android:fontFamily="@font/muli_semibold"
          android:maxLines="1"
          android:text="item "/>
      <TextView
          android:id="@+id/cus_4"
          android:gravity="center_horizontal"
          android:layout_weight="1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textColor="@color/black"
          android:textSize="@dimen/text_size_12"
          android:fontFamily="@font/muli_semibold"
          android:maxLines="1"
          android:text="item "/>
          <TextView
              android:id="@+id/cus_5"
              android:gravity="center_horizontal"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_12"
                        android:fontFamily="@font/muli_semibold"
                        android:maxLines="1"
                        android:text="item "/>

                </LinearLayout>

            </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>


        <!-- Delivery -->



         <!-- Inventory -->

        <androidx.cardview.widget.CardView
            android:layout_marginLeft="@dimen/size_10"
            android:layout_marginRight="@dimen/size_10"
            android:layout_marginTop="@dimen/size_5"
            android:layout_marginBottom="@dimen/size_5"
            android:elevation="@dimen/text_size_6"
            app:cardCornerRadius="@dimen/size_10"
            app:cardBackgroundColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="@dimen/text_size_5"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/inventory_status"
                    android:layout_marginTop="@dimen/text_size_10"
                    android:layout_marginLeft="@dimen/text_size_10"
                    android:layout_gravity="bottom"
                    android:paddingBottom="-20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/muli_semibold"
                    android:textSize="@dimen/text_size_14"
                    android:text="@string/inventory_status"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="@dimen/graph_280">


                        <com.github.mikephil.charting.charts.PieChart
                            android:id="@+id/inventory_pieChart"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_200"
                            android:layout_centerInParent="true" />

                        <RelativeLayout
                            android:layout_marginLeft="@dimen/size_10"
                            android:layout_marginRight="@dimen/size_10"
                            android:layout_marginBottom="@dimen/size_20"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                <LinearLayout
                  android:orientation="vertical"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">
                <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">
                  <LinearLayout
                  android:gravity="center_vertical"
                  android:orientation="horizontal"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">
                  <ImageView
                  android:layout_width="@dimen/size_15"
                  android:layout_height="@dimen/size_15"
                  android:src="@drawable/ic_slowmoving_dot"/>
                  <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/slow_moving"
                  android:fontFamily="@font/muli_regular"
                  android:textSize="@dimen/text_size_10"
                  android:textColor="@color/black"/>
            </LinearLayout>
         </LinearLayout>
       <LinearLayout
       android:layout_marginTop="@dimen/size_5"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
       <LinearLayout
       android:gravity="center_vertical"
       android:orientation="horizontal"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
       <ImageView
       android:layout_width="@dimen/size_15"
       android:layout_height="@dimen/size_15"
       android:src="@drawable/ic_fast_moving_dot"/>
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fast_moving"
        android:fontFamily="@font/muli_regular"
        android:textSize="@dimen/text_size_10"
        android:textColor="@color/black"/>
         </LinearLayout>
     </LinearLayout>
     <LinearLayout
     android:layout_marginTop="@dimen/size_5"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content">
     <LinearLayout
     android:gravity="center_vertical"
     android:orientation="horizontal"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content">
       <ImageView
        android:layout_marginRight="@dimen/size_1"
        android:layout_width="@dimen/size_15"
        android:layout_height="@dimen/size_15"
        android:src="@drawable/ic_non_moving_dot"/>
       <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/non_moving"
        android:fontFamily="@font/muli_regular"
        android:textSize="@dimen/text_size_10"
        android:textColor="@color/black"/>
       </LinearLayout>
      </LinearLayout>
   </LinearLayout>
  </RelativeLayout>
 </RelativeLayout>
</LinearLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>
