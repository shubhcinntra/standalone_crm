<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.BlankFragment"
    android:background="@color/white"
    android:clickable="true"
    android:id="@+id/quatoes_main_container">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <include
            android:visibility="gone"
            layout="@layout/header_bottomround_edit"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:scrollbars="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/size_15"
                android:layout_marginLeft="@dimen/size_15"
                android:layout_marginRight="@dimen/size_15">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/name"
                    android:id="@+id/first_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14"
                    android:fontFamily="@font/muli_regular"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10"
                    android:background="@drawable/rounded_border_edit"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="@dimen/size_30"
                        android:layout_height="@dimen/size_30"
                        android:padding="@dimen/size_5"
                        android:layout_margin="@dimen/size_5"
                        android:src="@drawable/building"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical|center_horizontal"/>

                    <EditText
                        android:id="@+id/name_value"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_45"
                        android:gravity="center_vertical"
                        android:hint="@string/name"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_toRightOf="@id/image1"
                        android:inputType="text"
                        android:maxLines="1"
                        android:maxLength="100"
                        android:imeOptions="actionNext"
                        android:textColorHint="@color/light_grey_box"
                        android:textSize="@dimen/text_size_14"
                        android:paddingLeft="@dimen/size_5"
                        android:background="@null"
                        />

                </RelativeLayout>


                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/company_id"
                    android:layout_marginTop="@dimen/size_15"
                    android:id="@+id/card"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14"
                    android:fontFamily="@font/muli_regular"/>





                    <EditText
                        android:id="@+id/cardCode_value"
                        android:layout_marginTop="@dimen/size_10"
                        android:background="@drawable/rounded_border"
                        android:maxLength="100"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_45"
                        android:gravity="center_vertical"
                        android:hint="@string/cardcode"
                        android:layout_centerVertical="true"
                        android:inputType="text"
                        android:maxLines="1"
                        android:imeOptions="actionNext"
                        android:textColorHint="@color/light_grey_box"
                        android:textSize="@dimen/text_size_14"
                        android:paddingLeft="@dimen/size_15"

                        />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/contact_owner"
                    android:layout_marginTop="@dimen/size_15"
                    android:id="@+id/conatct_owner"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14"
                    android:fontFamily="@font/muli_regular"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10"
                    android:background="@drawable/rounded_border"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image2"
                        android:layout_width="@dimen/size_30"
                        android:layout_height="@dimen/size_30"
                        android:padding="@dimen/size_5"
                        android:layout_margin="@dimen/size_5"
                        android:src="@drawable/person"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true" />

                    <EditText
                        android:id="@+id/contact_owner_value"
                        android:maxLength="100"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_45"
                        android:gravity="center_vertical"
                        android:hint="@string/contact_owner"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_toRightOf="@id/image2"
                        android:inputType="text"
                        android:maxLines="1"
                        android:imeOptions="actionNext"
                        android:textColorHint="@color/light_grey_box"
                        android:textSize="@dimen/text_size_14"
                        android:paddingLeft="@dimen/size_5"
                        android:background="@null"
                        />

                </RelativeLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sales_employee"
                    android:id="@+id/sales_employee"
                    android:layout_marginTop="@dimen/size_15"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14"
                    android:fontFamily="@font/muli_regular"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10"
                    android:paddingLeft="@dimen/size_10"
                    android:paddingRight="@dimen/size_10"
                    android:background="@drawable/rounded_border_edit">
                    <Spinner
                        android:id="@+id/sales_employee_spinner"
                        android:layout_toLeftOf="@id/drov_arrow"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_45"
                        android:gravity="center_vertical|start"
                        android:dropDownWidth="wrap_content"
                        android:forceHasOverlappingRendering="false"
                        android:spinnerMode="dropdown"
                        android:textSize="@dimen/text_size_14"
                        android:paddingLeft="@dimen/size_5"
                        android:background="@null"
                        android:dropDownVerticalOffset="@dimen/text_45"
                        />
                    <ImageView
                        android:id="@+id/drov_arrow"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_bottom_arrow_black"
                        />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/industry"
                    android:id="@+id/industry"
                    android:layout_marginTop="@dimen/size_15"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14"
                    android:fontFamily="@font/muli_regular"/>

                <RelativeLayout
                    android:id="@+id/industry_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10"
                    android:gravity="center_vertical"
                    android:background="@drawable/rounded_border"
                    android:paddingRight="@dimen/size_10">

                    <Spinner
                        android:id="@+id/industry_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_45"
                        android:gravity="center_vertical|start"
                        android:dropDownWidth="wrap_content"
                        android:forceHasOverlappingRendering="false"
                        android:spinnerMode="dropdown"
                        android:clickable="true"
                        android:focusable="false"
                        android:textSize="@dimen/text_size_14"
                        android:paddingLeft="@dimen/size_5"
                        android:background="@null"
                        />

                    <ImageView

                        android:clickable="true"
                        android:focusable="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/ic_bottom_arrow_black"/>

                </RelativeLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/type"
                    android:id="@+id/type"
                    android:layout_marginTop="@dimen/size_15"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14"
                    android:fontFamily="@font/muli_regular"/>

                <RelativeLayout
                    android:id="@+id/type_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10"
                    android:gravity="center_vertical"
                    android:paddingRight="@dimen/size_10"
                    android:background="@drawable/rounded_border">

                    <TextView
                        android:focusable="false"
                        android:id="@+id/type_spinner"
                        android:background="@color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_45"
                        android:fontFamily="@font/muli_regular"
                        android:gravity="start|center_vertical"
                        android:hint="@string/bussiness_partner"
                        android:paddingRight="@dimen/size_5"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:maxLines="1"
                        android:imeOptions="actionNext"
                        android:textColorHint="@color/light_grey_box"
                        android:textSize="@dimen/text_size_14"
                        android:paddingLeft="@dimen/size_5"/>
                </RelativeLayout>





                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/annual_revenue"
                    android:id="@+id/annual_revenue"
                    android:layout_marginTop="@dimen/size_15"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14"
                    android:fontFamily="@font/muli_regular"/>

                <EditText
                    android:id="@+id/annual_revenue_value"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_45"
                    android:gravity="center_vertical"
                    android:hint="@string/annual_revenue"
                    android:inputType="number"
                    android:maxLines="1"
                    android:maxLength="15"
                    android:imeOptions="actionNext"
                    android:textColorHint="@color/light_grey_box"
                    android:textSize="@dimen/text_size_14"
                    android:paddingLeft="@dimen/size_15"
                    android:layout_marginTop="@dimen/size_10"
                    android:background="@drawable/rounded_border"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/account_balance"
                    android:id="@+id/account_balance"
                    android:layout_marginTop="@dimen/size_15"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14"
                    android:fontFamily="@font/muli_regular"/>

                <EditText
                    android:id="@+id/account_balance_value"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_45"
                    android:gravity="center_vertical"
                    android:hint="@string/account_balance"
                    android:inputType="number"
                    android:maxLines="1"
                    android:maxLength="15"
                    android:imeOptions="actionNext"
                    android:textColorHint="@color/light_grey_box"
                    android:textSize="@dimen/text_size_14"
                    android:paddingLeft="@dimen/size_15"
                    android:layout_marginTop="@dimen/size_10"
                    android:background="@drawable/rounded_border"/>



                <TextView
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/company_id"
                    android:id="@+id/company_id"
                    android:layout_marginTop="@dimen/size_15"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14"
                    android:fontFamily="@font/muli_regular"/>

                <EditText
                    android:visibility="gone"
                    android:id="@+id/company_id_value"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_45"
                    android:gravity="center_vertical"
                    android:hint="@string/company_id"
                    android:inputType="number"
                    android:maxLines="1"
                    android:maxLength="12"
                    android:imeOptions="actionNext"
                    android:textColorHint="@color/light_grey_box"
                    android:textSize="@dimen/text_size_14"
                    android:paddingLeft="@dimen/size_15"
                    android:layout_marginTop="@dimen/size_10"
                    android:background="@drawable/rounded_border"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/invoice_no"
                    android:id="@+id/invoice_no"
                    android:layout_marginTop="@dimen/size_15"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14"
                    android:fontFamily="@font/muli_regular"/>

                <EditText
                    android:id="@+id/invoice_no_value"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_45"
                    android:gravity="center_vertical"
                    android:hint="@string/invoice_no"
                    android:inputType="number"
                    android:maxLines="1"
                    android:maxLength="12"
                    android:imeOptions="actionNext"
                    android:textColorHint="@color/light_grey_box"
                    android:textSize="@dimen/text_size_14"
                    android:paddingLeft="@dimen/size_15"
                    android:layout_marginTop="@dimen/size_10"
                    android:background="@drawable/rounded_border"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/credit_limit"
                    android:id="@+id/credit_limit"
                    android:layout_marginTop="@dimen/size_15"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14"
                    android:fontFamily="@font/muli_regular"/>

                <EditText
                    android:id="@+id/credit_limit_value"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_45"
                    android:gravity="center_vertical"
                    android:hint="@string/credit_limit"
                    android:inputType="number"
                    android:maxLines="1"
                    android:maxLength="120"
                    android:imeOptions="actionNext"
                    android:textColorHint="@color/light_grey_box"
                    android:textSize="@dimen/text_size_14"
                    android:paddingLeft="@dimen/size_15"
                    android:layout_marginTop="@dimen/size_10"
                    android:background="@drawable/rounded_border"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/payment_term"
                    android:id="@+id/payment_term"
                    android:layout_marginTop="@dimen/size_15"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14"
                    android:fontFamily="@font/muli_regular"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_45"
                    android:layout_marginTop="@dimen/size_10"
                    android:paddingRight="@dimen/size_10"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@drawable/rounded_border"
                    >


                    <Spinner
                        android:id="@+id/payment_term_value"
                        android:layout_toLeftOf="@id/img3"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_45"
                        android:gravity="center_vertical|start"
                        android:dropDownWidth="wrap_content"
                        android:forceHasOverlappingRendering="false"
                        android:spinnerMode="dropdown"
                        android:textSize="@dimen/text_size_14"
                        android:paddingLeft="@dimen/size_5"
                        android:background="@null"
                        android:dropDownVerticalOffset="@dimen/text_45"
                        />
                    <ImageView
                        android:id="@+id/img3"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_bottom_arrow_black"
                        />
                </RelativeLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ratings"
                    android:id="@+id/ratings"
                    android:layout_marginTop="@dimen/size_15"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14"
                    android:visibility="gone"
                    android:fontFamily="@font/muli_regular"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_45"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/size_10"
                    android:background="@drawable/rounded_border"
                    >

                    <RatingBar
                        android:id="@+id/ratingBar"
                        style="@style/Widget.AppCompat.RatingBar.Indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/Widget.AppCompat.RatingBar.Indicator"
                        android:clickable="true"
                        android:focusable="true"
                        android:isIndicator="false"
                        android:layout_alignParentLeft="true"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:layout_centerVertical="true"
                        android:progressTint="@color/safron_barChart"
                        android:numStars="5" />
                </RelativeLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/parent_account"
                    android:id="@+id/parent_account"
                    android:layout_marginTop="@dimen/size_15"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14"
                    android:fontFamily="@font/muli_regular"/>

                <EditText
                    android:id="@+id/parent_account_value"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_45"
                    android:gravity="center_vertical"
                    android:hint="@string/parent_account"
                    android:inputType="number"
                    android:maxLines="1"
                    android:maxLength="120"
                    android:imeOptions="actionNext"
                    android:textColorHint="@color/light_grey_box"
                    android:textSize="@dimen/text_size_14"
                    android:paddingLeft="@dimen/size_15"
                    android:layout_marginTop="@dimen/size_10"
                    android:background="@drawable/rounded_border"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mobile"
                    android:id="@+id/mobile"
                    android:layout_marginTop="@dimen/size_15"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14"
                    android:fontFamily="@font/muli_regular"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10"
                    android:background="@drawable/rounded_border"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image4"
                        android:layout_width="@dimen/size_30"
                        android:layout_height="@dimen/size_30"
                        android:src="@drawable/ic_phone_icon"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/size_5"
                        android:padding="@dimen/size_5"
                        />
                    <EditText
                        android:id="@+id/mobile_value"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_45"
                        android:gravity="center_vertical"
                        android:hint="@string/mobile"
                        android:inputType="phone|number"
                        android:maxLines="1"
                        android:maxLength="10"
                        android:imeOptions="actionNext"
                        android:textColorHint="@color/light_grey_box"
                        android:textSize="@dimen/text_size_14"
                        android:background="@null"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_toRightOf="@id/image4"
                        android:paddingLeft="@dimen/size_5"
                        android:paddingRight="@dimen/size_5"
                        />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/email"
                    android:id="@+id/email"
                    android:layout_marginTop="@dimen/size_15"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14"
                    android:fontFamily="@font/muli_regular"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@drawable/rounded_border">

                    <ImageView
                        android:id="@+id/image5"
                        android:layout_width="@dimen/size_30"
                        android:layout_height="@dimen/size_30"
                        android:src="@drawable/ic_message"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/size_5"
                        android:layout_margin="@dimen/size_5"
                        />

                    <EditText
                        android:maxLength="100"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_45"
                        android:gravity="center_vertical"
                        android:hint="@string/email"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:imeOptions="actionNext"
                        android:id="@+id/email_value"
                        android:textColorHint="@color/light_grey_box"
                        android:textSize="@dimen/text_size_14"
                        android:background="@null"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/image5"
                        android:paddingLeft="@dimen/size_5"
                        android:paddingRight="@dimen/size_5"
                        />
                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/website"
                    android:id="@+id/website"
                    android:layout_marginTop="@dimen/size_15"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14"
                    android:fontFamily="@font/muli_regular"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@drawable/rounded_border"
                    >

                    <ImageView
                        android:id="@+id/image6"
                        android:layout_width="@dimen/size_30"
                        android:layout_height="@dimen/size_30"
                        android:src="@drawable/ic_globe"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/size_5"
                        android:layout_margin="@dimen/size_5"
                        android:layout_gravity="center_vertical|center_horizontal"/>

                    <EditText

                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_45"
                        android:gravity="center_vertical"
                        android:hint="@string/website"
                        android:inputType="textUri"
                        android:maxLines="1"
                        android:maxLength="100"
                        android:imeOptions="actionNext"
                        android:id="@+id/website_value"
                        android:textColorHint="@color/light_grey_box"
                        android:textSize="@dimen/text_size_14"
                        android:background="@null"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_toRightOf="@id/image6"
                        android:paddingLeft="@dimen/size_5"
                        android:paddingRight="@dimen/size_5"
                        />
                </RelativeLayout>

                <include layout="@layout/address_section"/>
                <TextView
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/bill_to"
                    android:id="@+id/bill_to"
                    android:layout_marginTop="@dimen/size_15"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14"
                    android:fontFamily="@font/muli_regular"/>

                <RelativeLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@drawable/rounded_border"
                    >

                    <ImageView
                        android:id="@+id/image7"
                        android:layout_width="@dimen/size_30"
                        android:layout_height="@dimen/size_30"
                        android:src="@drawable/ic_location_icon"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/size_5"
                        android:layout_margin="@dimen/size_5"
                        />

                    <EditText
                        android:maxLength="100"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_45"
                        android:gravity="center_vertical"
                        android:hint="@string/bill_to"
                        android:inputType="textPostalAddress"
                        android:maxLines="1"
                        android:imeOptions="actionNext"
                        android:id="@+id/bill_to_value"
                        android:textColorHint="@color/light_grey_box"
                        android:textSize="@dimen/text_size_14"
                        android:background="@null"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:paddingLeft="@dimen/size_5"
                        android:paddingRight="@dimen/size_5"
                        android:layout_toRightOf="@id/image7"
                        />
                </RelativeLayout>

                <TextView
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ship_to"
                    android:id="@+id/ship_to"
                    android:layout_marginTop="@dimen/size_15"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14"
                    android:fontFamily="@font/muli_regular"/>

                <RelativeLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@drawable/rounded_border"
                    >

                    <ImageView
                        android:id="@+id/image8"
                        android:layout_width="@dimen/size_30"
                        android:layout_height="@dimen/size_30"
                        android:src="@drawable/ic_location_icon"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/size_5"
                        android:layout_margin="@dimen/size_5"
                        android:layout_gravity="start|center"/>

                    <EditText
                        android:maxLength="100"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_45"
                        android:gravity="center_vertical"
                        android:hint="@string/ship_to"
                        android:inputType="textPostalAddress"
                        android:maxLines="1"
                        android:imeOptions="actionNext"
                        android:id="@+id/ship_to_value"
                        android:textColorHint="@color/light_grey_box"
                        android:textSize="@dimen/text_size_14"
                        android:background="@null"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_toRightOf="@id/image8"
                        android:paddingRight="@dimen/size_5"
                        android:paddingLeft="@dimen/size_5"
                        />

                </RelativeLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/remarks"
                    android:id="@+id/remarks"
                    android:layout_marginTop="@dimen/size_15"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14"
                    android:fontFamily="@font/muli_regular"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_100"
                    android:gravity="start"
                    android:maxLines="5"
                    android:hint="@string/remarks"
                    android:maxLength="200"
                    android:inputType="textMultiLine"
                    android:layout_marginTop="@dimen/size_10"
                    android:imeOptions="actionDone"
                    android:id="@+id/remarks_value"
                    android:textColorHint="@color/light_grey_box"
                    android:textSize="@dimen/text_size_14"
                    android:background="@drawable/rounded_border"
                    android:padding="@dimen/size_15"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/attachment"
                    android:id="@+id/attachment"
                    android:layout_marginTop="@dimen/size_15"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14"
                    android:fontFamily="@font/muli_regular"/>

                <RelativeLayout
                    android:id="@+id/uploadview"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_100"
                    android:layout_marginTop="@dimen/size_10"
                    android:gravity="center"
                    android:background="@drawable/rounded_border"
                    >

                    <ImageView
                        android:id="@+id/upload_img"
                        android:layout_width="@dimen/size_50"
                        android:layout_height="@dimen/size_50"
                        android:src="@drawable/ic_upload"
                        android:layout_centerInParent="true"
                        android:layout_gravity="start|center"/>

                </RelativeLayout>



                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_rounded_corner"
                    android:text="@string/create"
                    app:backgroundTint="@color/colorPrimary"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:clickable="true"
                    android:layout_marginBottom="@dimen/size_15"
                    android:focusable="true"
                    android:fontFamily="@font/muli_regular"
                    android:id="@+id/create_button"
                    android:textSize="@dimen/text_size_18"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/size_50"
                    />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <include

        layout="@layout/loader"/>
</FrameLayout>
