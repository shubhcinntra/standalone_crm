<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/eventView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:gravity="center"
            android:layout_weight="3.30"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/timing"
                    android:layout_marginTop="@dimen/text_size_5"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_12"
                    android:fontFamily="@font/muli_semibold"
                    android:text=" 9:30 AM "/>
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/status"
                    android:buttonTint="@color/hint_color"
                    android:layout_width="@dimen/size_30"
                    android:layout_height="@dimen/size_30"
                    android:button="@null"
                    android:background="@drawable/ic_access_time"/>
            </LinearLayout>



        </LinearLayout>
        <RelativeLayout
            android:layout_marginRight="@dimen/size_10"
            android:layout_width="@dimen/size_15"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/priority_dot"
                android:elevation="@dimen/size_5"
                android:layout_marginTop="@dimen/size_10"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_red_dot"
                android:layout_width="@dimen/size_15"
                android:layout_height="@dimen/size_15"/>
            <View
                android:layout_centerHorizontal="true"
                android:background="@color/border_devider_color"
                android:layout_width="@dimen/text_size_2"
                android:layout_height="match_parent"/>

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                android:layout_marginTop="@dimen/size_15"
                android:layout_marginLeft="@dimen/size_5"
                android:layout_marginRight="@dimen/size_15"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/card_sky_blue_back"
                app:cardBackgroundColor="@color/card_sky_blue_back"
                android:elevation="@dimen/size_5"
                app:cardCornerRadius="@dimen/size_15">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_margin="@dimen/size_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="@dimen/text_size_5"
                        android:layout_marginLeft="@dimen/text_size_5"
                        android:id="@+id/title"
                        android:gravity="start"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_16"
                        android:fontFamily="@font/muli_semibold"
                        android:maxLines="1"
                        android:text=" GTM- Cinntra Training for s3 teaching "/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/text_size_10"
                        android:layout_marginTop="@dimen/text_size_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/ttt"
                            android:layout_gravity="center_vertical"
                            android:layout_width="@dimen/size_35"
                            android:visibility="gone"
                            android:layout_height="@dimen/size_35"
                            android:src="@drawable/pro_pic"/>
                        <TextView
                            android:id="@+id/location"
                            android:layout_gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_14"
                            android:fontFamily="@font/muli_semibold"
                            android:text=" Uttam Nagar , New Delhi "/>

                    </LinearLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_marginLeft="@dimen/text_size_10"
                            android:layout_marginTop="@dimen/text_size_3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/group_image"
                                android:layout_gravity="center_vertical"
                                android:layout_width="@dimen/size_30"
                                android:layout_height="@dimen/size_30"
                                android:src="@drawable/pro_pic"/>
                            <TextView
                                android:id="@+id/more"
                                android:gravity="start"
                                android:layout_gravity="center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/light_gray"
                                android:textSize="@dimen/text_size_14"
                                android:fontFamily="@font/muli_regular"
                                android:maxLines="1"
                                android:text=" +3 more "/>

                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>