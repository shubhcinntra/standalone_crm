<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
     android:orientation="horizontal"
     android:layout_margin="@dimen/text_size_15"
     android:layout_width="match_parent"
     android:layout_height="match_parent">
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/title"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_16"
                android:text="Test Name"
                android:fontFamily="@font/muli_bold"/>
            <TextView
                android:id="@+id/item_id"
                android:layout_below="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/hint_color"
                android:textSize="@dimen/text_size_14"
                android:text="A00003"
                android:fontFamily="@font/muli_regular"
                android:layout_marginTop="@dimen/text_size_3"/>

            <TextView
              android:id="@+id/quantity"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/hint_color"
              android:textSize="@dimen/text_size_14"
              android:text="Quanity : 5.0"
              android:fontFamily="@font/muli_regular"
              android:layout_marginTop="@dimen/text_size_5"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


      <ImageView
      android:id="@+id/arr"
      android:layout_alignParentRight="true"
      android:layout_width="@dimen/text_size_24"
      android:layout_height="@dimen/text_size_24"
      android:src="@drawable/ic_baseline_keyboard_arrow_right_24"/>





        <TextView
        android:id="@+id/unit_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="@color/hint_color"
        android:textSize="@dimen/text_size_14"
        android:text="Unit Price : 5.00 $ "
        android:fontFamily="@font/muli_regular"
        android:layout_marginTop="@dimen/text_size_3"/>

            <TextView
                android:id="@+id/total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/hint_color"
                android:textSize="@dimen/text_size_14"
                android:text="Total : 25.00 $ "
                android:fontFamily="@font/muli_regular"
                android:layout_marginTop="@dimen/text_size_3"/>
    </LinearLayout>
    </LinearLayout>


    <View
    android:layout_marginTop="@dimen/text_size_8"
    android:layout_marginLeft="@dimen/text_size_20"
    android:layout_width="match_parent"
    android:layout_height="@dimen/text_size_1"
    android:background="@color/hint_color"/>

</LinearLayout>