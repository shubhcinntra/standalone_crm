<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_part"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:textAlignment="center"
    app:behavior_peekHeight="125dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/companyname"
            android:layout_width="288dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/muli"
            android:password="false"
            android:text="@string/abc_private_ltd"
            android:textAlignment="viewStart"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:paddingRight="20dp"
            app:srcCompat="@drawable/ic_baseline_share_24" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:paddingRight="20dp"
            app:srcCompat="@drawable/ic_icons8_google_maps" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/address"
            android:layout_marginRight="@dimen/size_5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/muli"
            android:text="@string/noida_sec_18_near_gip_mall_nsecond_floor_tower_b"
            android:textAlignment="gravity"
            android:textColor="#000000"
            android:textSize="14sp" />


         <RelativeLayout
             android:gravity="center"
             android:layout_weight="2.5"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

             <Button
                 android:id="@+id/button"
                 android:layout_width="wrap_content"
                 android:layout_height="@dimen/size_40"
                 android:padding="@dimen/size_5"
                 android:background="@drawable/rounded_corners"
                 android:fontFamily="@font/muli"
                 android:text="Start now"
                 android:textAllCaps="false"
                 android:textColor="#FDFCFC"
                 android:textColorHint="#FFFFFF"
                 android:textSize="12sp"
                 android:textStyle="bold"
                 android:maxLines="1"
                 app:backgroundTint="#4A79E4" />

         </RelativeLayout>


    </LinearLayout>


</LinearLayout>