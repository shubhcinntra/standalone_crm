<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="false">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/admin_dialog_bg"
        android:backgroundTint="@color/white"
        android:orientation="vertical">

        <include
            android:id="@+id/header_bottom_rounded"
            layout="@layout/header_bottom_rounded" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/size_30"
                android:layout_marginEnd="@dimen/size_30"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_20"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/size_10"
                        android:text="@string/company_name_mand"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_16" />

                    <EditText
                        android:id="@+id/companyname"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@drawable/admin_border"
                        android:clickable="false"
                        android:ems="10"
                        android:focusable="false"
                        android:fontFamily="@font/roboto"
                        android:hint="Company Name"
                        android:inputType="textPersonName"
                        android:textColor="@color/black"
                        android:textColorHint="#ABABAB"
                        android:textSize="14sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"

                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/size_10"
                        android:text="@string/name_mand"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_16" />

                    <EditText
                        android:id="@+id/full_name"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@drawable/admin_border"
                        android:clickable="false"
                        android:ems="10"
                        android:focusable="false"
                        android:fontFamily="@font/roboto"
                        android:hint="Full Name"
                        android:inputType="textPersonName"
                        android:textColor="@color/black"
                        android:textColorHint="#ABABAB"
                        android:textSize="14sp" />
                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_10"
                    android:text="@string/mobile_no_mand"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/admin_border">

                    <EditText
                        android:id="@+id/contact_no"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:ems="10"
                        android:fontFamily="@font/roboto"
                        android:hint="Contact No."
                        android:inputType="phone"
                        android:textColor="@color/black"

                        android:textColorHint="#ABABAB"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_phone_icon" />
                </RelativeLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_10"
                    android:text="@string/email"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16" />


                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/admin_border"

                    android:ems="10"
                    android:fontFamily="@font/roboto"
                    android:hint="E-mail"
                    android:inputType="textWebEmailAddress"
                    android:textColor="@color/black"
                    android:textColorHint="#ABABAB"
                    android:textSize="14sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_10"
                    android:text="@string/location"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16" />

                <EditText
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginBottom="@dimen/size_20"
                    android:background="@drawable/admin_border"

                    android:ems="10"
                    android:fontFamily="@font/roboto"
                    android:hint="Location"
                    android:inputType="textPersonName"
                    android:textColor="@color/black"
                    android:textColorHint="#ABABAB"
                    android:textSize="14sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_10"
                    android:text="@string/source"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16" />

                <EditText
                    android:id="@+id/source"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/admin_border"
                    android:clickable="false"
                    android:ems="10"
                    android:focusable="false"
                    android:fontFamily="@font/roboto"
                    android:hint="@string/source"
                    android:inputType="textPersonName"
                    android:textColor="@color/black"
                    android:textColorHint="#ABABAB"
                    android:textSize="14sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_20"
                    android:layout_marginBottom="@dimen/size_10"
                    android:text="@string/designation"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16" />


                <EditText
                    android:id="@+id/designation"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/admin_border"
                    android:fontFamily="@font/roboto"

                    android:hint="@string/designation"
                    android:imeOptions="actionNext"
                    android:inputType="textCapSentences"
                    android:textColor="@color/black"
                    android:textColorHint="#ABABAB"
                    android:textSize="14sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_10"
                    android:text="@string/turnover"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16" />


                <EditText
                    android:id="@+id/turnover"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/admin_border"
                    android:clickable="false"
                    android:focusable="false"
                    android:fontFamily="@font/roboto"
                    android:hint="@string/turnover"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textColorHint="#ABABAB"
                    android:textSize="14sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_20"
                    android:layout_marginBottom="@dimen/size_10"
                    android:text="@string/status"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_border_edit">


                    <Spinner
                        android:id="@+id/status_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_45"
                        android:dropDownWidth="wrap_content"
                        android:dropDownVerticalOffset="@dimen/text_45"
                        android:entries="@array/lead_status"
                        android:forceHasOverlappingRendering="false"
                        android:gravity="center_vertical|start"
                        android:paddingLeft="@dimen/size_5"
                        android:spinnerMode="dropdown"
                        android:textSize="@dimen/text_size_14" />

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_20"
                    android:layout_marginBottom="@dimen/size_10"
                    android:text="@string/lead_type"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_border_edit">


                    <Spinner
                        android:id="@+id/leadType_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_45"
                        android:dropDownWidth="wrap_content"
                        android:dropDownVerticalOffset="@dimen/text_45"
                        android:forceHasOverlappingRendering="false"
                        android:gravity="center_vertical|start"
                        android:paddingLeft="@dimen/size_5"
                        android:spinnerMode="dropdown"
                        android:textSize="@dimen/text_size_14" />

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_20"
                    android:layout_marginBottom="@dimen/size_10"
                    android:text="@string/product_interest"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16" />

                <EditText
                    android:id="@+id/product_interest"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginBottom="@dimen/size_20"
                    android:background="@drawable/admin_border"
                    android:clickable="false"
                    android:ems="10"
                    android:focusable="false"
                    android:fontFamily="@font/roboto"
                    android:hint="@string/product_interest"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/black"
                    android:textColorHint="#ABABAB"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_10"
                    android:text="@string/comment"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16" />


                <EditText
                    android:id="@+id/comment"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginBottom="@dimen/size_20"
                    android:background="@drawable/admin_border"

                    android:ems="10"
                    android:fontFamily="@font/roboto"
                    android:hint="Comment"
                    android:inputType="textPersonName"
                    android:textColor="@color/black"
                    android:textColorHint="#ABABAB"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/update"
                    android:layout_width="135dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/size_20"
                    android:background="@drawable/rounded_corner"
                    android:backgroundTint="#4A79E4"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:text="@string/update"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:visibility="visible" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/loader"
        style="@style/SpinKitView.Large.Circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:clickable="true"
        android:visibility="gone"
        app:SpinKit_Color="@color/colorPrimary" />

</RelativeLayout>

