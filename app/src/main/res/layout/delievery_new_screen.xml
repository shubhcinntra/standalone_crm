<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/size_5"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="true"
        app:cardBackgroundColor="@color/white"
        android:layout_marginLeft="@dimen/size_5"
        android:layout_marginRight="@dimen/size_5"
        app:cardElevation="@dimen/size_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/size_10"
            android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ABC Pvt. ltd."
                    android:layout_marginBottom="@dimen/size_2"
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/black"
                    android:fontFamily="@font/muli_bold"/>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_2"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/order_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/order_id"
                        android:textSize="@dimen/text_size_10"
                        android:textColor="@color/black"
                        android:fontFamily="@font/muli_regular"/>

                    <TextView
                        android:id="@+id/order_id_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 99237929"
                        android:textSize="@dimen/text_size_10"
                        android:textColor="@color/safron_barChart"
                        android:fontFamily="@font/muli_regular"/>

                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_2"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/order_placed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_placed"
                    android:textSize="@dimen/text_size_10"
                    android:textColor="@color/black"
                    android:fontFamily="@font/muli_regular"/>

                <TextView
                    android:id="@+id/doc_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date"
                    android:textSize="@dimen/text_size_10"
                    android:textColor="@color/safron_barChart"
                    android:fontFamily="@font/muli_regular"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_2"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/deleivery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/excpected_delivery"
                    android:textSize="@dimen/text_size_10"
                    android:textColor="@color/black"
                    android:fontFamily="@font/muli_regular"/>

                <TextView
                    android:id="@+id/amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date"
                    android:textSize="@dimen/text_size_10"
                    android:textColor="@color/safron_barChart"
                    android:fontFamily="@font/muli_regular"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_2"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/ship_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ship_to_"
                    android:textSize="@dimen/text_size_10"
                    android:textColor="@color/black"
                    android:fontFamily="@font/muli_regular"/>

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Abc Limited"
                    android:textSize="@dimen/text_size_10"
                    android:textColor="@color/safron_barChart"
                    android:fontFamily="@font/muli_regular"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>