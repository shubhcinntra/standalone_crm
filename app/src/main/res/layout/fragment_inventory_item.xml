<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/size_15"
        android:layout_marginLeft="@dimen/size_10"
        android:layout_marginRight="@dimen/size_10">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_description"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/muli_bold"
        android:textSize="@dimen/text_size_14" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_name"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="@dimen/size_15"
        android:fontFamily="@font/muli_regular"
        android:textSize="@dimen/text_size_12" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_45"
        android:id="@+id/item_name"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/size_10"
        android:padding="@dimen/size_8"
        android:clickable="false"
        android:focusable="false"
        android:background="@drawable/rounded_border"
        android:fontFamily="@font/muli_regular"
        android:textSize="@dimen/text_size_12" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_code"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="@dimen/size_15"
        android:fontFamily="@font/muli_regular"
        android:textSize="@dimen/text_size_12" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_45"
        android:id="@+id/itemcode"
        android:textColor="@color/black"
        android:background="@drawable/rounded_border"
        android:layout_marginTop="@dimen/size_10"
        android:padding="@dimen/size_8"
        android:clickable="false"
        android:focusable="false"
        android:gravity="center_vertical"
        android:fontFamily="@font/muli_regular"
        android:textSize="@dimen/text_size_12" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/per_unit"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/muli_regular"
        android:layout_marginTop="@dimen/size_15"
        android:textSize="@dimen/text_size_12" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_45"
                android:layout_marginTop="@dimen/size_10"
                android:textColor="@color/black"
                android:id="@+id/per_unit"
                android:textSize="@dimen/text_size_12"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center_vertical"
                android:padding="@dimen/size_8"
                android:fontFamily="@font/muli_regular"
                android:layout_marginRight="@dimen/size_8"
                android:background="@drawable/rounded_border"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/in_stock_quantity"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/muli_regular"
                android:layout_marginTop="@dimen/size_15"
                android:textSize="@dimen/text_size_12" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_45"
                android:layout_marginTop="@dimen/size_10"
                android:textColor="@color/black"
                android:id="@+id/in_stock_quantity"
                android:textSize="@dimen/text_size_12"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center_vertical"
                android:padding="@dimen/size_8"
                android:fontFamily="@font/muli_regular"
                android:layout_marginLeft="@dimen/size_8"
                android:background="@drawable/rounded_border"/>

        </LinearLayout>
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total_amount"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/muli_regular"
        android:layout_marginTop="@dimen/size_15"
        android:textSize="@dimen/text_size_12" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_45"
        android:layout_marginTop="@dimen/size_10"
        android:textColor="@color/black"
        android:id="@+id/total_amnt"
        android:textSize="@dimen/text_size_12"
        android:gravity="center_vertical"
        android:clickable="false"
        android:focusable="false"
        android:padding="@dimen/size_8"
        android:fontFamily="@font/muli_regular"
        android:layout_marginRight="@dimen/size_8"
        android:background="@drawable/rounded_border"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/description"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/muli_regular"
        android:layout_marginTop="@dimen/size_15"
        android:textSize="@dimen/text_size_12" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_90"
        android:layout_marginTop="@dimen/size_10"
        android:textColor="@color/black"
        android:id="@+id/description"
        android:maxLines="3"
        android:clickable="false"
        android:focusable="false"
        android:textSize="@dimen/text_size_12"
        android:padding="@dimen/size_8"
        android:fontFamily="@font/muli_regular"
        android:layout_marginRight="@dimen/size_8"
        android:background="@drawable/rounded_border"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/see_more"
        android:textColor="@color/black"
        android:layout_gravity="right"
        android:fontFamily="@font/muli_regular"
        android:layout_marginTop="@dimen/size_15"
        android:textSize="@dimen/text_size_12" />



    <Button
        android:layout_width="@dimen/size_120"
        android:layout_height="wrap_content"
        android:background="@drawable/button_rounded_corner"
        android:text="@string/ok"
        android:backgroundTint="@color/colorPrimary"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:clickable="true"
        android:layout_marginBottom="@dimen/size_15"
        android:focusable="true"
        android:fontFamily="@font/muli_regular"
        android:id="@+id/add"
        android:textSize="@dimen/text_size_18"
        android:layout_gravity="center"
        />
    </LinearLayout>
</ScrollView>
</LinearLayout>