<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:orientation="vertical"
        android:gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <androidx.core.widget.NestedScrollView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="right"
                android:id="@+id/receiver_view"
                android:layout_marginLeft="@dimen/size_20"
                android:layout_marginRight="@dimen/size_20"
                android:layout_marginTop="@dimen/size_10"
                android:layout_height="match_parent">




                <LinearLayout
                    android:id="@+id/imageicon"
                    android:layout_width="@dimen/size_30"
                    android:layout_height="@dimen/size_30"
                    android:background="@drawable/rounded_border_edit">
                    <TextView
                        android:id="@+id/textimage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:text="P"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size_16"
                        android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/messagelayout"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/size_10"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/rounded_border_edit"
                    android:backgroundTint="#956387DA">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/size_15"
                        android:text="Hi"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_16"
                        android:id="@+id/receivertext"/>


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date"
                    android:layout_marginTop="@dimen/size_5"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_12"
                    android:id="@+id/receiverdatetime"/>






            </LinearLayout>


        </androidx.core.widget.NestedScrollView>


        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_marginStart="@dimen/size_10"
                android:layout_marginRight="@dimen/size_10"
                android:layout_width="@dimen/size_25"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/priority_dot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_baseline_directions_run_24" />

                <View
                    android:layout_width="@dimen/text_size_6"
                    android:layout_height="match_parent"
                    android:layout_below="@id/priority_dot"
                    android:layout_centerHorizontal="true"
                    android:background="@color/devider_color" />

            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card"



                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="@dimen/size_5"
                    >

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginStart="@dimen/size_10"
                        android:layout_marginEnd="@dimen/size_10"
                        android:layout_marginBottom="@dimen/size_20"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginLeft="@dimen/text_size_5"
                            android:id="@+id/title"
                            android:gravity="start"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_16"
                            android:fontFamily="@font/muli_bold"
                            android:maxLines="1"
                            android:text=" "/>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_marginLeft="@dimen/text_size_10"
                            android:layout_marginTop="@dimen/text_size_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/ttt"
                                android:layout_gravity="center_vertical"
                                android:layout_width="@dimen/size_35"
                                android:visibility="gone"
                                android:layout_height="@dimen/size_35"
                                android:src="@drawable/pro_pic"/>
                            <TextView
                                android:id="@+id/message"
                                android:layout_gravity="center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_14"
                                android:fontFamily="@font/muli_semibold"

                                android:text=" Lorem ipsum dolor sit amet consectetur adipisicing elit. Dolores veniam libero sapiente cumque sed, eum ipsa amet! Recusandae, harum aut. Lorem ipsum dolor sit amet consectetur adipisicing elit. Quis, aliquid."/>

                        </LinearLayout>
                        <LinearLayout
                            android:visibility="gone"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_marginLeft="@dimen/text_size_10"
                                android:layout_marginTop="@dimen/text_size_3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/group_image"
                                    android:layout_gravity="center_vertical"
                                    android:layout_width="@dimen/size_30"
                                    android:layout_height="@dimen/size_30"
                                    android:src="@drawable/pro_pic"/>
                                <TextView
                                    android:id="@+id/more"
                                    android:gravity="start"
                                    android:layout_gravity="center_vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/light_gray"
                                    android:textSize="@dimen/text_size_14"
                                    android:fontFamily="@font/muli_regular"
                                    android:maxLines="1"
                                    android:text=" +3 more "/>

                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>