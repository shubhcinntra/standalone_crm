<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Listed Dr."
        app:titleTextColor="@color/white"
        android:background="@color/colorPrimary"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_8"
            app:layout_constraintTop_toTopOf="parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/muli_bold"
                        android:text="Listed Dr."
                        android:textColor="@color/text_color"
                        android:textSize="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_4"
                        android:background="@drawable/rounded_border"
                        android:orientation="vertical"

                        >

                        <AutoCompleteTextView
                            android:id="@+id/participant_value"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/text_45"
                            android:layout_margin="@dimen/size_4"
                            android:layout_marginTop="@dimen/size_5"
                            android:background="@android:color/transparent"
                            android:completionThreshold="1"
                            android:gravity="center_vertical"
                            android:hint="Doctor"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:maxLength="100"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/size_8"
                            android:textColorHint="@color/light_grey_box"
                            android:textSize="@dimen/text_size_12" />




                    </LinearLayout>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="5dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:padding="10dp"
                                    android:text="Speciality"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_black"
                                    android:textSize="14sp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:padding="10dp"
                                    android:text="Category"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_black"
                                    android:textSize="14sp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.7"
                                    android:padding="10dp"
                                    android:text="Class"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_black"
                                    android:textSize="14sp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.7"
                                    android:padding="10dp"
                                    android:text="DOB"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_black"
                                    android:textSize="14sp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.7"
                                    android:padding="10dp"
                                    android:text="DOW"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_black"
                                    android:textSize="14sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="5dp">

                                <TextView
                                    android:id="@+id/specailiyt"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:padding="10dp"
                                    android:gravity="center_horizontal"
                                    android:text="ORT"
                                    android:textColor="@color/text_black"
                                    android:textSize="13sp" />

                                <TextView
                                    android:id="@+id/Category"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:padding="10dp"
                                    android:text="NIL"
                                    android:gravity="center_horizontal"
                                    android:textColor="@color/text_black"
                                    android:textSize="13sp" />

                                <TextView
                                    android:id="@+id/classes"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.7"
                                    android:padding="10dp"
                                    android:text="NIL"
                                    android:gravity="center_horizontal"
                                    android:textColor="@color/text_black"
                                    android:textSize="13sp" />

                                <TextView
                                    android:id="@+id/dob"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.7"
                                    android:padding="10dp"
                                    android:text="NIL"
                                    android:gravity="center_horizontal"
                                    android:textColor="@color/text_black"
                                    android:textSize="13sp" />

                                <TextView
                                    android:id="@+id/dow"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.7"
                                    android:padding="10dp"
                                    android:text="NIL"
                                    android:gravity="center_horizontal"
                                    android:textColor="@color/text_black"
                                    android:textSize="13sp" />

                            </LinearLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/muli_bold"
                    android:text="POB"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/dimen_16" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_4"
                    android:background="@drawable/rounded_border"
                    android:orientation="vertical"

                    >

                    <EditText
                        android:id="@+id/etPOB"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_45"
                        android:layout_margin="@dimen/size_4"
                        android:layout_marginTop="@dimen/size_5"
                        android:background="@android:color/transparent"
                        android:completionThreshold="1"
                        android:gravity="center_vertical"
                        android:hint="POB"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="100"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/size_8"
                        android:textColorHint="@color/light_grey_box"
                        android:textSize="@dimen/text_size_12" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvChipItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_8"
                        android:layout_marginTop="@dimen/size_2"
                        android:layout_marginEnd="@dimen/size_8"
                        android:layout_marginBottom="@dimen/size_2"
                        android:visibility="gone" />
                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_8"
            app:layout_constraintTop_toTopOf="parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_4"
                    android:background="@drawable/rounded_border"
                    android:orientation="vertical"

                    >

                    <AutoCompleteTextView
                        android:id="@+id/autocompletemember"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_45"
                        android:layout_margin="@dimen/size_4"
                        android:layout_marginTop="@dimen/size_5"
                        android:background="@android:color/transparent"
                        android:completionThreshold="1"
                        android:gravity="center_vertical"
                        android:hint="select memeber"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLength="100"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/size_8"
                        android:textColorHint="@color/light_grey_box"
                        android:textSize="@dimen/text_size_12" />


                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/productCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_8"
            app:layout_constraintTop_toTopOf="parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/muli_bold"
                    android:text="Our Product"
                    android:drawableStart="@drawable/ic_product"
                    android:padding="@dimen/size_8"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/dimen_16"
                    android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
                    />



            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_8"
            app:layout_constraintTop_toTopOf="parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/muli_bold"
                    android:text="input"
                    android:drawableStart="@drawable/ic_product"
                    android:padding="@dimen/size_8"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/dimen_16"
                    android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
                    />



            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/rcpa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_8"
            app:layout_constraintTop_toTopOf="parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/muli_bold"
                    android:text="RCPA"
                    android:drawableStart="@drawable/ic_product"
                    android:padding="@dimen/size_8"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/dimen_16"
                    android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
                    />



            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/newVisitCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_8"
            app:layout_constraintTop_toTopOf="parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/muli_bold"
                    android:text="new visit"
                    android:drawableStart="@drawable/ic_product"
                    android:padding="@dimen/size_8"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/dimen_16"
                    android:drawableEnd="@drawable/ic_calender"
                    />



            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_8"
            app:layout_constraintTop_toTopOf="parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/muli_bold"
                    android:text="Activity"
                    android:drawableStart="@drawable/ic_product"
                    android:padding="@dimen/size_8"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/dimen_16"
                    android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
                    />



            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_8"
            app:layout_constraintTop_toTopOf="parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/muli_bold"
                    android:text="FeedBack"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/dimen_16" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_4"
                    android:background="@drawable/rounded_border"
                    android:orientation="vertical"

                    >

                    <AutoCompleteTextView
                        android:id="@+id/autoFeedback"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_45"
                        android:layout_margin="@dimen/size_4"
                        android:layout_marginTop="@dimen/size_5"
                        android:background="@android:color/transparent"
                        android:completionThreshold="1"
                        android:gravity="center_vertical"
                        android:hint="Select Feedback"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLength="100"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/size_8"
                        android:textColorHint="@color/light_grey_box"
                        android:textSize="@dimen/text_size_12" />


                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_8"
            app:layout_constraintTop_toTopOf="parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/muli_bold"
                    android:text="@string/remarks"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/dimen_16" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_4"
                    android:background="@drawable/rounded_border"
                    android:orientation="vertical"

                    >

                    <EditText
                        android:id="@+id/etRemarks"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_margin="@dimen/size_4"
                        android:layout_marginTop="@dimen/size_5"
                        android:background="@android:color/transparent"
                        android:completionThreshold="1"
                       android:gravity="start"
                        android:hint="Remarks"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLength="100"
                        android:maxLines="7"
                        android:paddingLeft="@dimen/size_8"
                        android:textColorHint="@color/light_grey_box"
                        android:textSize="@dimen/text_size_12" />


                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            app:cornerRadius="@dimen/size_10"
            android:padding="@dimen/size_8"
            android:layout_margin="@dimen/size_8"




            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>