<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/admin_edit_user"
    android:background="@drawable/admin_dialog_bg"
    android:backgroundTint="@color/white"

    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="38dp"
        android:orientation="vertical">



    <TextView
        android:id="@+id/edit_user"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:fontFamily="@font/roboto_bold"
        android:text="Edit user profile"
        android:textAlignment="center"
        android:textColor="#4A79E4"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_8"
            android:fontFamily="@font/roboto_medium"
            android:text="Full Name"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/edit_full_name"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/admin_border"
            android:ems="10"
            android:fontFamily="@font/roboto"
            android:inputType="textPersonName"
            android:hint="Nipun Dixit"
            android:textColorHint="#ABABAB"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/size_5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/level_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginBottom="5dp"
                android:text="Level"
                android:textColor="#000000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edit_level"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/admin_border"
                android:ems="10"
                android:fontFamily="@font/roboto"
                android:inputType="textPersonName"
                android:hint="Level-1"
                android:textColorHint="#ABABAB"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/size_5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/job_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginBottom="5dp"
                android:text="Job Role"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/edit_role"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/admin_border"
                android:ems="10"
                android:fontFamily="@font/roboto"
                android:inputType="textPersonName"
                android:hint="Director"
                android:textColorHint="#ABABAB"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/size_5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/access_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginBottom="5dp"
                android:text="Access"
                android:textColor="#000000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edit_access"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/admin_border"
                android:ems="10"
                android:fontFamily="@font/roboto"
                android:inputType="textPersonName"
                android:hint="Manager"
                android:textColorHint="#ABABAB"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/size_5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/join_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginBottom="5dp"
                android:text="Joined on"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/edit_date"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/admin_border"
                android:ems="10"
                android:fontFamily="@font/roboto"
                android:inputType="date"
                android:hint="12-04-2021"
                android:textColorHint="#ABABAB"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>



        <TextView
            android:id="@+id/report_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginBottom="5dp"
            android:text="Reporting To"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/edit_supervisor"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/admin_border"
            android:ems="10"
            android:layout_marginBottom="@dimen/size_20"
            android:fontFamily="@font/roboto"
            android:inputType="textPersonName"
            android:hint="--"
            android:textColorHint="#ABABAB"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/email_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginBottom="5dp"
            android:text="Email"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/edit_email"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/admin_border"
            android:ems="10"
            android:layout_marginBottom="@dimen/size_20"
            android:fontFamily="@font/roboto"
            android:inputType="textEmailAddress"
            android:hint="nipun@gmail.com"
            android:textColorHint="#ABABAB"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/username_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginBottom="5dp"
            android:text="User name"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/edit_username"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/admin_border"
            android:ems="10"
            android:fontFamily="@font/roboto"
            android:inputType="textPersonName"
            android:hint="Nipun"
            android:layout_marginBottom="@dimen/size_20"
            android:textColorHint="#ABABAB"
            android:textSize="14sp" />

    <Button
        android:id="@+id/edit_done"
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/admin_button_border"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/done"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="@dimen/size_20"
        android:textSize="16sp"
        app:backgroundTint="#4A79E4" />

    </LinearLayout>
    </ScrollView>
</LinearLayout>