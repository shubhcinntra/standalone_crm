<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.Dashboard"
    android:paddingTop="@dimen/text_size_5"
    android:paddingLeft="@dimen/text_size_10">
    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        app:cardCornerRadius="@dimen/text_size_5"
        android:layout_width="@dimen/size_140"
        android:layout_height="@dimen/size_90"
        app:cardElevation="@dimen/text_size_10"
        app:cardBackgroundColor="@color/title_back_dark"
        android:layout_gravity="center"
        >

            <LinearLayout
                 android:layout_margin="@dimen/text_size_10"                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_marginTop="@dimen/text_size_5"
                    android:gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   >
                    <ImageView
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/icon"
                        android:layout_width="@dimen/text_40"
                        android:layout_height="@dimen/text_40"
                        android:src="@drawable/opendelivery">
                    </ImageView>
                    <TextView
                        android:layout_below="@+id/icon"
                        android:id="@+id/item_name"
                         android:gravity="center"
                        android:maxLines="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_12"
                        android:fontFamily="@font/muli_semibold"
                        android:textColor="@color/green_title"
                        android:text="@string/settings"/>


                </RelativeLayout>
            </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>